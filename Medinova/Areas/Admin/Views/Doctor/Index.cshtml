@model IEnumerable<Medinova.Models.Doctor>
@{
    ViewBag.Title = "Doktorlar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="space-y-6">
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-2xl font-bold text-slate-900 dark:text-white">Doktor Yönetimi</h1>
            <p class="text-slate-500 dark:text-slate-400 mt-1">Doktor kayıtlarını yönetin</p>
        </div>
        <a href="@Url.Action("Create", "Doctor", new { area = "Admin" })"
           class="bg-primary hover:bg-primary/90 text-white px-4 py-2.5 rounded-lg text-sm font-semibold flex items-center gap-2 transition-colors">
            <span class="material-symbols-outlined !text-lg">add</span>
            Yeni Doktor
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="bg-white dark:bg-slate-800 rounded-xl border border-slate-200 dark:border-slate-700 overflow-hidden">
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-slate-200 dark:divide-slate-700">
                    <thead class="bg-slate-50 dark:bg-slate-900/50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-semibold text-slate-500 dark:text-slate-400 uppercase">Ad Soyad</th>
                            <th class="px-6 py-3 text-left text-xs font-semibold text-slate-500 dark:text-slate-400 uppercase">Departman</th>
                            <th class="px-6 py-3 text-left text-xs font-semibold text-slate-500 dark:text-slate-400 uppercase">Açıklama</th>
                            <th class="px-6 py-3 text-right text-xs font-semibold text-slate-500 dark:text-slate-400 uppercase">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-slate-200 dark:divide-slate-700">
                        @foreach (var doctor in Model)
                        {
                            <tr class="hover:bg-slate-50 dark:hover:bg-slate-900/40">
                                <td class="px-6 py-4 text-sm font-medium text-slate-900 dark:text-white">@doctor.FullName</td>
                                <td class="px-6 py-4 text-sm text-slate-600 dark:text-slate-300">
                                    @(doctor.Department != null ? doctor.Department.Name : "-")
                                </td>
                                <td class="px-6 py-4 text-sm text-slate-600 dark:text-slate-300">
                                    @(string.IsNullOrWhiteSpace(doctor.Description) ? "-" : doctor.Description)
                                </td>
                                <td class="px-6 py-4 text-right">
                                    <div class="flex items-center justify-end gap-2">
                                        <a href="@Url.Action("Update", "Doctor", new { area = "Admin", id = doctor.DoctorId })"
                                           class="p-1.5 bg-blue-100 dark:bg-blue-900/30 text-blue-600 dark:text-blue-400 rounded-lg hover:bg-blue-200 dark:hover:bg-blue-900/50 transition-colors"
                                           title="Düzenle">
                                            <span class="material-symbols-outlined !text-lg">edit</span>
                                        </a>
                                        <form method="post" action="@Url.Action("Delete", "Doctor", new { area = "Admin", id = doctor.DoctorId })"
                                              onsubmit="return confirm('Bu doktoru silmek istediğinize emin misiniz?');" class="inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit"
                                                    class="p-1.5 bg-red-100 dark:bg-red-900/30 text-red-600 dark:text-red-400 rounded-lg hover:bg-red-200 dark:hover:bg-red-900/50 transition-colors"
                                                    title="Sil">
                                                <span class="material-symbols-outlined !text-lg">delete</span>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="bg-white dark:bg-slate-800 rounded-xl border border-slate-200 dark:border-slate-700 p-12 text-center">
            <span class="material-symbols-outlined !text-5xl text-slate-300 dark:text-slate-600 mb-4">medical_services</span>
            <h3 class="text-lg font-semibold text-slate-700 dark:text-slate-300 mb-2">Doktor bulunamadı</h3>
            <p class="text-slate-500 dark:text-slate-400 mb-6">İlk doktor kaydını ekleyerek başlayın.</p>
            <a href="@Url.Action("Create", "Doctor", new { area = "Admin" })"
               class="inline-flex items-center gap-2 bg-primary hover:bg-primary/90 text-white px-5 py-2.5 rounded-lg text-sm font-semibold transition-colors">
                <span class="material-symbols-outlined !text-lg">add</span>
                Doktor Ekle
            </a>
        </div>
    }
</div>
@model Medinova.Models.Service
@{
    ViewBag.Title = "Hizmet Düzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="space-y-6">

    <!-- Header -->
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-2xl font-bold text-slate-900 dark:text-white">Hizmet Düzenle</h1>
            <p class="text-slate-500 dark:text-slate-400 mt-1">Hizmet detaylarını güncelleyin</p>
        </div>
        <a href="@Url.Action("Index", "Service", new { area = "Admin" })"
           class="text-slate-600 dark:text-slate-400 hover:text-slate-900 dark:hover:text-white text-sm font-medium">
            ← Listeye Dön
        </a>
    </div>

    <!-- Form -->
    <div class="bg-white dark:bg-slate-800 rounded-xl border border-slate-200 dark:border-slate-700 p-6">
        <form method="post"
              action="@Url.Action("Edit", "Service", new { area = "Admin", id = Model.SeviceId })"
              class="space-y-6">

            @Html.AntiForgeryToken()
            @Html.HiddenFor(x => x.SeviceId)

            <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">

                <!-- Sol -->
                <div class="space-y-6">
                    <!-- Title -->
                    <div>
                        <label class="block text-sm font-medium mb-2">Hizmet Başlığı *</label>
                        <input type="text" name="Title" id="Title"
                               value="@Model.Title"
                               class="w-full bg-slate-50 dark:bg-slate-700 border rounded-lg px-4 py-2.5 text-sm focus:ring-2 focus:ring-primary"
                               required>
                    </div>

                    <!-- Description -->
                    <div>
                        <label class="block text-sm font-medium mb-2">Açıklama *</label>
                        <textarea name="Description" id="Description" rows="6"
                                  class="w-full bg-slate-50 dark:bg-slate-700 border rounded-lg px-4 py-2.5 text-sm focus:ring-2 focus:ring-primary"
                                  required>@Model.Description</textarea>
                    </div>
                </div>

                <!-- Sağ -->
                <div class="space-y-6">

                    <!-- Icon URL -->
                    <div>
                        <label class="block text-sm font-medium mb-2">
                            İkon URL <span class="text-slate-400 text-xs">(Opsiyonel)</span>
                        </label>

                        <input type="url"
                               name="Icon"
                               id="Icon"
                               value="@Model.Icon"
                               class="w-full bg-slate-50 dark:bg-slate-700 border rounded-lg px-4 py-2.5 text-sm focus:ring-2 focus:ring-primary"
                               placeholder="https://site.com/icons/heart.svg">

                        <p class="text-xs text-slate-500 mt-2">
                            SVG önerilir. PNG / WEBP de kullanılabilir.
                        </p>
                    </div>

                    <!-- Preview -->
                    <div class="border-t pt-4">
                        <h3 class="text-sm font-semibold mb-3">Önizleme</h3>

                        <div class="flex items-start gap-4 bg-slate-50 dark:bg-slate-900/50 p-4 rounded-lg border">
                            <div id="iconPreviewBox"
                                 class="w-12 h-12 rounded-lg bg-primary/10 flex items-center justify-center @(string.IsNullOrEmpty(Model.Icon) ? "hidden" : "")">
                                <img id="iconPreviewImg"
                                     src="@Model.Icon"
                                     class="w-6 h-6 object-contain" />
                            </div>

                            <div>
                                <h4 id="previewTitle" class="text-sm font-semibold">
                                    @(string.IsNullOrEmpty(Model.Title) ? "Hizmet Başlığı" : Model.Title)
                                </h4>
                                <p id="previewDescription" class="text-xs text-slate-500">
                                    @(Model.Description?.Length > 80
                                        ? Model.Description.Substring(0, 80) + "..."
                                        : Model.Description)
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- Meta -->
                    <div class="border-t pt-4">
                        <div class="grid grid-cols-2 gap-4 text-sm">
                            <div>
                                <p class="text-slate-400 text-xs">Hizmet ID</p>
                                <p class="font-medium">@Model.SeviceId</p>
                            </div>
                            <div>
                                <p class="text-slate-400 text-xs">İkon Durumu</p>
                                <p class="font-medium @(string.IsNullOrEmpty(Model.Icon) ? "text-amber-600" : "text-green-600")">
                                    @(string.IsNullOrEmpty(Model.Icon) ? "Yok" : "Var")
                                </p>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

            <!-- Actions -->
            <div class="flex justify-between pt-6 border-t">
                <a href="@Url.Action("Index", "Service", new { area = "Admin" })"
                   class="px-5 py-2.5 border rounded-lg text-sm">
                    İptal
                </a>

                <button type="submit"
                        class="bg-primary text-white px-6 py-2.5 rounded-lg text-sm font-semibold">
                    Hizmeti Güncelle
                </button>
            </div>

        </form>
    </div>
</div>

<script>
    const iconInput = document.getElementById("Icon");
    const iconBox = document.getElementById("iconPreviewBox");
    const iconImg = document.getElementById("iconPreviewImg");

    iconInput.addEventListener("input", () => {
        const url = iconInput.value.trim();
        if (url) {
            iconImg.src = url;
            iconBox.classList.remove("hidden");
        } else {
            iconBox.classList.add("hidden");
            iconImg.src = "";
        }
    });

    document.getElementById("Title").addEventListener("input", e => {
        document.getElementById("previewTitle").textContent =
            e.target.value || "Hizmet Başlığı";
    });

    document.getElementById("Description").addEventListener("input", e => {
        const t = e.target.value;
        document.getElementById("previewDescription").textContent =
            t.length > 80 ? t.substring(0, 80) + "..." : t || "Hizmet açıklaması burada görünecek...";
    });
</script>

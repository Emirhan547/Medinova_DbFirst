@model IEnumerable<Medinova.Models.Service>
@{
    ViewBag.Title = "Service Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count=0;
}

<div class="space-y-6">

    <!-- Header -->
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-2xl font-bold text-slate-900 dark:text-white">Service Management</h1>
            <p class="text-slate-500 dark:text-slate-400 mt-1">Manage your healthcare services</p>
        </div>
        <a href="@Url.Action("CreateService", "Service", new { area = "Admin" })"
           class="bg-primary hover:bg-primary/90 text-white px-4 py-2.5 rounded-lg text-sm font-semibold flex items-center gap-2 transition-colors">
            <span class="material-symbols-outlined !text-lg">add</span>
            Add New Service
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            @foreach (var service in Model)
            {
                count++;
                <div class="bg-white dark:bg-slate-800 rounded-xl border border-slate-200 dark:border-slate-700 p-6 hover:shadow-lg transition-shadow">

                    <!-- Card Header -->
                    <div class="flex items-start justify-between mb-4">
                        <!-- ICON -->
                        <div class="p-3 rounded-lg bg-primary/10 text-primary flex items-center justify-center">
                            @{
                                var icon = service.Icon?.Trim();
                            }

                            @if (!string.IsNullOrEmpty(icon))
                            {
                                if (icon.StartsWith("fa"))
                                {
                                    <i class="@icon text-2xl"></i>
                                }
                                else if (icon.StartsWith("bi"))
                                {
                                    <i class="@icon text-2xl"></i>
                                }
                                else if (icon.StartsWith("/") || icon.StartsWith("http"))
                                {
                                    <img src="@icon"
                                         alt="@service.Title"
                                         class="w-6 h-6 object-contain" />
                                }
                                else
                                {
                                    <i class="fa-solid fa-hospital text-2xl text-slate-400"></i>
                                }
                            }
                            else
                            {
                                <i class="fa-solid fa-hospital text-2xl text-slate-400"></i>
                            }
                        </div>

                        <!-- Actions -->
                        <div class="flex items-center gap-1">
                            <a href="@Url.Action("UpdateService", "Service", new { area = "Admin", id = service.SeviceId })"
                               class="p-1.5 bg-blue-100 dark:bg-blue-900/30 text-blue-600 dark:text-blue-400 rounded-lg hover:bg-blue-200 dark:hover:bg-blue-900/50 transition-colors"
                               title="Edit">
                                <span class="material-symbols-outlined !text-lg">edit</span>
                            </a>

                            <form method="post"
                                  action="@Url.Action("DeleteService", "Service", new { area = "Admin", id = service.SeviceId })"
                                  onsubmit="return confirm('Are you sure you want to delete this service?');"
                                  class="inline">
                                @Html.AntiForgeryToken()
                                <button type="submit"
                                        class="p-1.5 bg-red-100 dark:bg-red-900/30 text-red-600 dark:text-red-400 rounded-lg hover:bg-red-200 dark:hover:bg-red-900/50 transition-colors"
                                        title="Delete">
                                    <span class="material-symbols-outlined !text-lg">delete</span>
                                </button>
                            </form>
                        </div>
                    </div>

                    <!-- Content -->
                    <h3 class="text-lg font-semibold text-slate-900 dark:text-white mb-2">
                        @service.Title
                    </h3>

                    <p class="text-sm text-slate-600 dark:text-slate-400 mb-4">
                        @(service.Description?.Length > 100
                            ? service.Description.Substring(0, 100) + "..."
                            : service.Description)
                    </p>

                    <!-- Footer -->
                    <div class="text-xs text-slate-500 dark:text-slate-400 flex items-center gap-2">
                        <span class="inline-flex items-center gap-1">
                            <span class="material-symbols-outlined !text-sm">tag</span>
                            # @count
                        </span>

                        <span class="h-1 w-1 bg-slate-300 rounded-full"></span>

                        <span class="inline-flex items-center gap-1">
                            <span class="material-symbols-outlined !text-sm">category</span>
                            Icon:
                            @(
                                string.IsNullOrEmpty(service.Icon)
                                    ? "Default"
                                    : service.Icon.StartsWith("fa")
                                        ? "Font Awesome"
                                        : service.Icon.StartsWith("bi")
                                            ? "Bootstrap Icon"
                                            : "Image"
                            )
                        </span>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="bg-white dark:bg-slate-800 rounded-xl border border-slate-200 dark:border-slate-700 p-12 text-center">
            <i class="fa-solid fa-hospital text-5xl text-slate-300 dark:text-slate-600 mb-4"></i>
            <h3 class="text-lg font-semibold text-slate-700 dark:text-slate-300 mb-2">
                No Services Found
            </h3>
            <p class="text-slate-500 dark:text-slate-400 mb-6">
                Add your first healthcare service to get started.
            </p>
            <a href="@Url.Action("CreateService", "Service", new { area = "Admin" })"
               class="inline-flex items-center gap-2 bg-primary hover:bg-primary/90 text-white px-5 py-2.5 rounded-lg text-sm font-semibold transition-colors">
                <span class="material-symbols-outlined !text-lg">add</span>
                Add Service
            </a>
        </div>
    }
</div>

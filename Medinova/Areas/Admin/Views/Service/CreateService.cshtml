@model Medinova.Models.Service
@{
    ViewBag.Title = "Hizmet Oluştur";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="space-y-6">

    <!-- Header -->
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-2xl font-bold text-slate-900 dark:text-white">Hizmet Oluştur</h1>
            <p class="text-slate-500 dark:text-slate-400 mt-1">Yeni sağlık hizmeti ekleyin</p>
        </div>
        <a href="@Url.Action("Index", "Service", new { area = "Admin" })"
           class="text-slate-600 dark:text-slate-400 hover:text-slate-900 dark:hover:text-white text-sm font-medium">
            ← Listeye Dön
        </a>
    </div>

    <!-- Form -->
    <div class="bg-white dark:bg-slate-800 rounded-xl border border-slate-200 dark:border-slate-700 p-6">
        <form method="post"
              action="@Url.Action("CreateService", "Service", new { area = "Admin" })"
              class="space-y-6">
            @Html.AntiForgeryToken()

            <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">

                <!-- Sol -->
                <div class="space-y-6">
                    <div>
                        <label class="block text-sm font-medium mb-2">Hizmet Başlığı *</label>
                        <input type="text" name="Title" id="Title"
                               class="w-full bg-slate-50 dark:bg-slate-700 border rounded-lg px-4 py-2.5 text-sm focus:ring-2 focus:ring-primary"
                               placeholder="Örn: Kardiyoloji"
                               required>
                    </div>

                    <div>
                        <label class="block text-sm font-medium mb-2">Açıklama *</label>
                        <textarea name="Description" id="Description" rows="6"
                                  class="w-full bg-slate-50 dark:bg-slate-700 border rounded-lg px-4 py-2.5 text-sm focus:ring-2 focus:ring-primary"
                                  placeholder="Hizmet detaylarını açıklayın..."
                                  required></textarea>
                    </div>
                </div>

                <!-- Sağ -->
                <div class="space-y-6">

                    <!-- Icon -->
                    <div>
                        <label class="block text-sm font-medium mb-2">
                            İkon (URL veya Font Awesome / Bootstrap Icon)
                        </label>

                        <input type="text"
                               name="Icon"
                               id="Icon"
                               class="w-full bg-slate-50 dark:bg-slate-700 border rounded-lg px-4 py-2.5 text-sm focus:ring-2 focus:ring-primary"
                               placeholder="fa-solid fa-heart  |  bi bi-heart-pulse  |  /Content/icons/heart.svg">

                        <p class="text-xs text-slate-500 mt-2">
                            Örnekler:
                            <code>fa-solid fa-heart</code>,
                            <code>bi bi-hospital</code>,
                            <code>/Content/icons/services/heart.svg</code>
                        </p>
                    </div>

                    <!-- Preview -->
                    <div class="border-t pt-4">
                        <h3 class="text-sm font-semibold mb-3">Önizleme</h3>

                        <div class="flex items-start gap-4 bg-slate-50 dark:bg-slate-900/50 p-4 rounded-lg border">
                            <div id="iconPreviewBox"
                                 class="w-12 h-12 rounded-lg bg-primary/10 flex items-center justify-center hidden">
                            </div>

                            <div>
                                <h4 id="previewTitle" class="text-sm font-semibold">Hizmet Başlığı</h4>
                                <p id="previewDescription" class="text-xs text-slate-500">
                                    Hizmet açıklaması burada görünecek...
                                </p>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

            <!-- Actions -->
            <div class="flex justify-between pt-6 border-t">
                <button type="button" onclick="history.back()"
                        class="px-5 py-2.5 border rounded-lg text-sm">
                    İptal
                </button>

                <button type="submit"
                        class="bg-primary text-white px-6 py-2.5 rounded-lg text-sm font-semibold">
                    Hizmet Oluştur
                </button>
            </div>
        </form>
    </div>
</div>

<script>
    const iconInput = document.getElementById("Icon");
    const iconBox = document.getElementById("iconPreviewBox");

    iconInput.addEventListener("input", () => {
        const val = iconInput.value.trim();
        iconBox.innerHTML = "";

        if (!val) {
            iconBox.classList.add("hidden");
            return;
        }

        iconBox.classList.remove("hidden");

        // Font Awesome
        if (val.startsWith("fa")) {
            iconBox.innerHTML = `<i class="${val} text-primary text-xl"></i>`;
        }
        // Bootstrap Icons
        else if (val.startsWith("bi")) {
            iconBox.innerHTML = `<i class="${val} text-primary text-xl"></i>`;
        }
        // Image URL
        else {
            iconBox.innerHTML = `<img src="${val}" class="w-6 h-6 object-contain" />`;
        }
    });

    document.getElementById("Title").addEventListener("input", e => {
        document.getElementById("previewTitle").textContent =
            e.target.value || "Hizmet Başlığı";
    });

    document.getElementById("Description").addEventListener("input", e => {
        const t = e.target.value;
        document.getElementById("previewDescription").textContent =
            t.length > 80 ? t.substring(0, 80) + "..." : t || "Hizmet açıklaması burada görünecek...";
    });
</script>

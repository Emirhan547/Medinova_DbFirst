@model IEnumerable<Medinova.Models.Role>
@{
    ViewBag.Title = "Roller";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="space-y-6">
    <div>
        <h1 class="text-2xl font-bold text-slate-900 dark:text-white">Rol Yönetimi</h1>
        <p class="text-slate-500 dark:text-slate-400 mt-1">Yeni roller ekleyin ve mevcut rolleri görüntüleyin.</p>
    </div>

    <div class="bg-white dark:bg-slate-800 rounded-xl border border-slate-200 dark:border-slate-700 p-6">
        <h2 class="text-lg font-semibold text-slate-900 dark:text-white mb-4">Yeni Rol Ekle</h2>
        <form method="post" action="@Url.Action("Create", "Role", new { area = "Admin" })" class="grid gap-4 md:grid-cols-3">
            @Html.AntiForgeryToken()
            <div class="md:col-span-1">
                <label class="block text-sm font-medium text-slate-600 dark:text-slate-300 mb-1">Rol Adı</label>
                <input type="text" name="RoleName" class="w-full rounded-lg border-slate-200 dark:border-slate-700 bg-white dark:bg-slate-900 text-sm" placeholder="Örn: Patient" />
            </div>
            <div class="md:col-span-2">
                <label class="block text-sm font-medium text-slate-600 dark:text-slate-300 mb-1">Açıklama</label>
                <input type="text" name="Description" class="w-full rounded-lg border-slate-200 dark:border-slate-700 bg-white dark:bg-slate-900 text-sm" placeholder="Rol açıklaması" />
            </div>
            <div class="md:col-span-3 flex justify-end">
                <button type="submit"
                        class="bg-primary hover:bg-primary/90 text-white px-4 py-2.5 rounded-lg text-sm font-semibold transition-colors">
                    Kaydet
                </button>
            </div>
        </form>
    </div>

    <div class="bg-white dark:bg-slate-800 rounded-xl border border-slate-200 dark:border-slate-700 overflow-hidden">
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-slate-200 dark:divide-slate-700">
                <thead class="bg-slate-50 dark:bg-slate-900/50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-semibold text-slate-500 dark:text-slate-400 uppercase">Rol</th>
                        <th class="px-6 py-3 text-left text-xs font-semibold text-slate-500 dark:text-slate-400 uppercase">Açıklama</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-200 dark:divide-slate-700">
                    @if (Model != null && Model.Any())
                    {
                        foreach (var role in Model)
                        {
                            <tr class="hover:bg-slate-50 dark:hover:bg-slate-900/40">
                                <td class="px-6 py-4 text-sm font-medium text-slate-900 dark:text-white">@role.RoleName</td>
                                <td class="px-6 py-4 text-sm text-slate-600 dark:text-slate-300">
                                    @(string.IsNullOrWhiteSpace(role.Description) ? "-" : role.Description)
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="2" class="px-6 py-6 text-center text-sm text-slate-500 dark:text-slate-400">Rol bulunamadı.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
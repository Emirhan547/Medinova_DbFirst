@model Medinova.Models.Banner
@{
    ViewBag.Title = "UpdateBanner";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="space-y-6">
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-2xl font-bold text-slate-900 dark:text-white">Banner Düzenle</h1>
            <p class="text-slate-500 dark:text-slate-400 mt-1">Banner detaylarını güncelleyin</p>
        </div>
        <a href="@Url.Action("Index", "Banner", new { area = "Admin" })"
           class="text-slate-600 dark:text-slate-400 hover:text-slate-900 dark:hover:text-white flex items-center gap-2 text-sm font-medium">
            <span class="material-symbols-outlined !text-lg">arrow_back</span>
            Listeye Dön
        </a>
    </div>

    <div class="bg-white dark:bg-slate-800 rounded-xl border border-slate-200 dark:border-slate-700 p-6">
        <form method="post" action="@Url.Action("UpdateBanner", "Banner", new { area = "Admin", id = Model.BannerId })" enctype="multipart/form-data" class="space-y-6">
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.BannerId)

            <div class="space-y-6">
                <!-- Başlık -->
                <div data-image-upload>
                    <label for="Title" class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">
                        Başlık <span class="text-red-500">*</span>
                    </label>
                    <input type="text" id="Title" name="Title" value="@Model.Title"
                           class="w-full bg-slate-50 dark:bg-slate-700 border border-slate-300 dark:border-slate-600 rounded-lg px-4 py-2.5 text-sm focus:ring-2 focus:ring-primary focus:border-primary outline-none transition-all"
                           placeholder="Banner başlığını girin"
                           required>
                </div>

                <!-- Açıklama -->
                <div>
                    <label for="Description" class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">
                        Açıklama <span class="text-slate-400 text-xs">(Opsiyonel)</span>
                    </label>
                    <textarea id="Description" name="Description" rows="4"
                              class="w-full bg-slate-50 dark:bg-slate-700 border border-slate-300 dark:border-slate-600 rounded-lg px-4 py-2.5 text-sm focus:ring-2 focus:ring-primary focus:border-primary outline-none transition-all resize-none"
                              placeholder="Banner açıklamasını girin">@Model.Description</textarea>
                </div>

                <!-- Mevcut Resim -->
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <div>
                        <label class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">
                            Mevcut Resim
                        </label>
                        <div class="relative mb-4">
                            <div class="rounded-lg bg-cover bg-center border-2 border-slate-200 dark:border-slate-600 h-48"
                                 style="background-image: url('@Model.ImageUrl')" id="currentImage"></div>
                            <div class="absolute bottom-3 left-3 bg-black/70 text-white text-xs px-3 py-1 rounded-full">
                                Mevcut Banner Resmi
                            </div>
                        </div>
                        <div class="text-sm text-slate-600 dark:text-slate-400 mb-4">
                            Mevcut resim URL'si: <span class="font-mono text-xs bg-slate-100 dark:bg-slate-700 px-2 py-1 rounded">@Model.ImageUrl</span>
                        </div>
                    </div>
                }

                <!-- Yeni Resim Yükleme -->
                <div>
                    <label class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">
                        Resmi Değiştir <span class="text-slate-400 text-xs">(Opsiyonel)</span>
                    </label>

                    <!-- Yeni Resim Önizleme -->
                    <                    <div id="imagePreview" class="mb-4 hidden" data-image-upload-preview>
                        id="imagePreview" class="mb-4 hidden">
                        <div class="relative">
                            <div class="rounded-lg bg-cover bg-center border-2 border-slate-200 dark:border-slate-600 h-48"
                                 id="previewImage" data-image-upload-preview-image></div>
                            <button type="button" data-image-upload-remove
                                    class="absolute top-3 right-3 size-10 bg-red-500 text-white rounded-full flex items-center justify-center hover:bg-red-600 transition-colors shadow-lg">
                                <span class="material-symbols-outlined !text-lg">delete</span>
                            </button>
                            <div class="absolute bottom-3 left-3 bg-black/70 text-white text-xs px-3 py-1 rounded-full">
                                <span id="fileInfo" data-image-upload-info data-default-text="Yeni Resim">Yeni Resim</span>
                            </div>
                        </div>
                    </div>

                    <!-- Dosya Yükleme -->
                    <div class="border-2 border-dashed border-slate-300 dark:border-slate-600 rounded-lg p-6 text-center hover:border-primary/50 transition-colors cursor-pointer"
                         id="uploadArea" data-image-upload-area>
                        <span class="material-symbols-outlined !text-4xl text-slate-400 dark:text-slate-500 mb-2">cloud_upload</span>
                        <p class="text-sm text-slate-600 dark:text-slate-400 mb-1">
                            <span class="font-medium text-primary hover:text-primary/80 cursor-pointer">Yüklemek için tıklayın</span> veya sürükleyip bırakın
                        </p>
                        <p class="text-xs text-slate-500 dark:text-slate-500">Önerilen: 1920x600px (JPG, PNG, WebP - Maks. 10MB)</p>
                        <input type="file" id="fileInput" name="ImageFile" accept="image/*"
                               class="hidden" data-image-upload-input>
                    </div>

                    <!-- Resim URL Girişi -->
                    <div class="mt-4">
                        <p class="text-sm text-slate-500 dark:text-slate-400 mb-2">Veya yeni resim URL'si girin</p>
                        <input type="url" id="ImageUrl" name="ImageUrl" value="@Model.ImageUrl"
                               class="w-full bg-slate-50 dark:bg-slate-700 border border-slate-300 dark:border-slate-600 rounded-lg px-4 py-2.5 text-sm focus:ring-2 focus:ring-primary focus:border-primary outline-none transition-all"
                               placeholder="https://example.com/banner-image.jpg"
                               data-image-upload-url>
                    </div>
                </div>
            </div>

            <!-- Form İşlemleri -->
            <div class="flex items-center justify-between pt-6 border-t border-slate-200 dark:border-slate-700">
                <a href="@Url.Action("Index", "Banner", new { area = "Admin" })"
                   class="px-5 py-2.5 border border-slate-300 dark:border-slate-600 text-slate-700 dark:text-slate-300 rounded-lg text-sm font-medium hover:bg-slate-50 dark:hover:bg-slate-700 transition-colors">
                    İptal
                </a>
                <div class="flex items-center gap-3">
                    <button type="submit"
                            class="bg-primary hover:bg-primary/90 text-white px-6 py-2.5 rounded-lg text-sm font-semibold flex items-center gap-2 transition-colors">
                        <span class="material-symbols-outlined !text-lg">save</span>
                        Banner'ı Güncelle
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>


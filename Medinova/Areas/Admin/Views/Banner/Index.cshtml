@model IEnumerable<Medinova.Models.Banner>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="space-y-6">
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-2xl font-bold text-slate-900 dark:text-white">Banner Yönetimi</h1>
            <p class="text-slate-500 dark:text-slate-400 mt-1">Websitenizdeki banner'ları yönetin</p>
        </div>
        <a href="@Url.Action("CreateBanner", "Banner", new { area = "Admin" })"
           class="bg-primary hover:bg-primary/90 text-white px-4 py-2.5 rounded-lg text-sm font-semibold flex items-center gap-2 transition-colors">
            <span class="material-symbols-outlined !text-lg">add</span>
            Yeni Banner Oluştur
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="bg-white dark:bg-slate-800 rounded-xl border border-slate-200 dark:border-slate-700 overflow-hidden">
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead class="bg-slate-50 dark:bg-slate-700/50 border-b border-slate-200 dark:border-slate-700">
                        <tr>
                            <th class="py-3 px-6 text-left text-xs font-semibold text-slate-700 dark:text-slate-300 uppercase tracking-wider">Resim</th>
                            <th class="py-3 px-6 text-left text-xs font-semibold text-slate-700 dark:text-slate-300 uppercase tracking-wider">Başlık</th>
                            <th class="py-3 px-6 text-left text-xs font-semibold text-slate-700 dark:text-slate-300 uppercase tracking-wider">Açıklama</th>
                            <th class="py-3 px-6 text-left text-xs font-semibold text-slate-700 dark:text-slate-300 uppercase tracking-wider">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-slate-200 dark:divide-slate-700">
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr class="hover:bg-slate-50 dark:hover:bg-slate-700/30 transition-colors">
                                <td class="py-4 px-6">
                                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                                    {
                                        <div class="relative">
                                            <div class="size-16 rounded-lg bg-cover bg-center border border-slate-200 dark:border-slate-600"
                                                 style="background-image: url('@item.ImageUrl')"></div>
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-slate-400 dark:text-slate-500 text-sm">Resim yok</span>
                                    }
                                </td>
                                <td class="py-4 px-6">
                                    <div class="text-sm font-medium text-slate-900 dark:text-white">
                                        @(item.Title?.Length > 50 ? item.Title.Substring(0, 50) + "..." : item.Title)
                                    </div>
                                    <div class="text-xs text-slate-500 dark:text-slate-400 mt-1">
                                        #@count
                                    </div>
                                </td>
                                <td class="py-4 px-6 text-sm text-slate-600 dark:text-slate-400">
                                    @(item.Description?.Length > 100 ? item.Description.Substring(0, 100) + "..." : item.Description)
                                </td>
                                <td class="py-4 px-6">
                                    <div class="flex items-center gap-2">
                                        <a href="@Url.Action("UpdateBanner", "Banner", new { area = "Admin", id = item.BannerId })"
                                           class="p-2 bg-blue-100 dark:bg-blue-900/30 text-blue-600 dark:text-blue-400 rounded-lg hover:bg-blue-200 dark:hover:bg-blue-900/50 transition-colors"
                                           title="Düzenle">
                                            <span class="material-symbols-outlined !text-lg">edit</span>
                                        </a>
                                        <form method="post" action="@Url.Action("DeleteBanner", "Banner", new { area = "Admin", id = item.BannerId })"
                                              onsubmit="return confirm('Bu banner\'ı silmek istediğinize emin misiniz?');" class="inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit"
                                                    class="p-2 bg-red-100 dark:bg-red-900/30 text-red-600 dark:text-red-400 rounded-lg hover:bg-red-200 dark:hover:bg-red-900/50 transition-colors"
                                                    title="Sil">
                                                <span class="material-symbols-outlined !text-lg">delete</span>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="bg-white dark:bg-slate-800 rounded-xl border border-slate-200 dark:border-slate-700 p-12 text-center">
            <span class="material-symbols-outlined !text-5xl text-slate-300 dark:text-slate-600 mb-4">view_carousel</span>
            <h3 class="text-lg font-semibold text-slate-700 dark:text-slate-300 mb-2">Banner Bulunamadı</h3>
            <p class="text-slate-500 dark:text-slate-400 mb-6">Websitede görüntülenecek ilk banner\'ınızı oluşturun.</p>
            <a href="@Url.Action("CreateBanner", "Banner", new { area = "Admin" })"
               class="inline-flex items-center gap-2 bg-primary hover:bg-primary/90 text-white px-5 py-2.5 rounded-lg text-sm font-semibold transition-colors">
                <span class="material-symbols-outlined !text-lg">add</span>
                Banner Oluştur
            </a>
        </div>
    }
</div>
@model IEnumerable<Medinova.Models.Testimonial>
@{
    ViewBag.Title = "Referans Yönetimi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="space-y-6">
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-2xl font-bold text-slate-900 dark:text-white">Referans Yönetimi</h1>
            <p class="text-slate-500 dark:text-slate-400 mt-1">Müşteri referanslarını ve yorumlarını yönetin</p>
        </div>
        <a href="@Url.Action("CreateTestimonial", "Testimonial", new { area = "Admin" })"
           class="bg-primary hover:bg-primary/90 text-white px-4 py-2.5 rounded-lg text-sm font-semibold flex items-center gap-2 transition-colors">
            <span class="material-symbols-outlined !text-lg">add</span>
            Referans Ekle
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            @foreach (var testimonial in Model)
            {
                count++;
                <div class="bg-white dark:bg-slate-800 rounded-xl border border-slate-200 dark:border-slate-700 overflow-hidden hover:shadow-lg transition-shadow">
                    <!-- Referans Başlığı -->
                    <div class="p-6">
                        <div class="flex items-center justify-between mb-4">
                            <div class="flex items-center gap-3">
                                @if (!string.IsNullOrEmpty(testimonial.ImageUrl))
                                {
                                    <div class="size-12 rounded-full bg-cover bg-center border-2 border-primary/20"
                                         style="background-image: url('@testimonial.ImageUrl')"></div>
                                }
                                else
                                {
                                    <div class="size-12 rounded-full bg-primary/10 flex items-center justify-center">
                                        <span class="material-symbols-outlined text-primary">person</span>
                                    </div>
                                }
                                <div>
                                    <h3 class="font-semibold text-slate-900 dark:text-white">@testimonial.FullName</h3>
                                    <p class="text-sm text-slate-500 dark:text-slate-400">@testimonial.Profession</p>
                                </div>
                            </div>
                            <div class="flex items-center gap-1">
                                <a href="@Url.Action("UpdateTestimonial", "Testimonial", new { area = "Admin", id = testimonial.TestimonialId })"
                                   class="p-1.5 bg-blue-100 dark:bg-blue-900/30 text-blue-600 dark:text-blue-400 rounded-lg hover:bg-blue-200 dark:hover:bg-blue-900/50 transition-colors"
                                   title="Düzenle">
                                    <span class="material-symbols-outlined !text-lg">edit</span>
                                </a>
                                <form method="post" action="@Url.Action("DeleteTestimonial", "Testimonial", new { area = "Admin", id = testimonial.TestimonialId })"
                                      onsubmit="return confirm('Bu referansı silmek istediğinizden emin misiniz?');" class="inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit"
                                            class="p-1.5 bg-red-100 dark:bg-red-900/30 text-red-600 dark:text-red-400 rounded-lg hover:bg-red-200 dark:hover:bg-red-900/50 transition-colors"
                                            title="Sil">
                                        <span class="material-symbols-outlined !text-lg">delete</span>
                                    </button>
                                </form>
                            </div>
                        </div>

                        <!-- Yorum -->
                        <div class="mb-4">
                            <div class="relative">
                                <span class="material-symbols-outlined absolute -left-2 -top-2 text-yellow-400">format_quote</span>
                                <p class="text-sm text-slate-600 dark:text-slate-400 italic pl-4">
                                    "@(testimonial.Comment?.Length > 150 ? testimonial.Comment.Substring(0, 150) + "..." : testimonial.Comment)"
                                </p>
                            </div>
                        </div>

                        <!-- Referans Alt Bilgi -->
                        <div class="pt-4 border-t border-slate-200 dark:border-slate-700">
                            <div class="flex items-center justify-between text-xs text-slate-500 dark:text-slate-400">
                                <span># @count</span>
                                <span class="flex items-center gap-1">
                                    <span class="material-symbols-outlined !text-sm">star</span>
                                    <span class="material-symbols-outlined !text-sm">star</span>
                                    <span class="material-symbols-outlined !text-sm">star</span>
                                    <span class="material-symbols-outlined !text-sm">star</span>
                                    <span class="material-symbols-outlined !text-sm">star</span>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="bg-white dark:bg-slate-800 rounded-xl border border-slate-200 dark:border-slate-700 p-12 text-center">
            <span class="material-symbols-outlined !text-5xl text-slate-300 dark:text-slate-600 mb-4">chat</span>
            <h3 class="text-lg font-semibold text-slate-700 dark:text-slate-300 mb-2">Referans Bulunamadı</h3>
            <p class="text-slate-500 dark:text-slate-400 mb-6">Güven oluşturmak için müşteri referansları ekleyin.</p>
            <a href="@Url.Action("CreateTestimonial", "Testimonial", new { area = "Admin" })"
               class="inline-flex items-center gap-2 bg-primary hover:bg-primary/90 text-white px-5 py-2.5 rounded-lg text-sm font-semibold transition-colors">
                <span class="material-symbols-outlined !text-lg">add</span>
                Referans Ekle
            </a>
        </div>
    }
</div>
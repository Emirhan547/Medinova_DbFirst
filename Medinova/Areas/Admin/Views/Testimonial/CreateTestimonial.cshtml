@model Medinova.Models.Testimonial

@{
    ViewBag.Title = "Referans Oluştur";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="space-y-6">
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-2xl font-bold text-slate-900 dark:text-white">Referans Oluştur</h1>
            <p class="text-slate-500 dark:text-slate-400 mt-1">Yeni müşteri referansı ekleyin</p>
        </div>
        <a href="@Url.Action("Index", "Testimonial", new { area = "Admin" })"
           class="text-slate-600 dark:text-slate-400 hover:text-slate-900 dark:hover:text-white flex items-center gap-2 text-sm font-medium">
            <span class="material-symbols-outlined !text-lg">arrow_back</span>
            Listeye Geri Dön
        </a>
    </div>

    <div class="bg-white dark:bg-slate-800 rounded-xl border border-slate-200 dark:border-slate-700 p-6">
        <form method="post" action="@Url.Action("CreateTestimonial", "Testimonial", new { area = "Admin" })" enctype="multipart/form-data" class="space-y-6">
            @Html.AntiForgeryToken()

            <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                <!-- Sol Sütun - Kişisel Bilgiler -->
                <div class="space-y-6">
                    <!-- Tam Ad -->
                    <div>
                        <label for="FullName" class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">
                            Tam Ad <span class="text-red-500">*</span>
                        </label>
                        <input type="text" id="FullName" name="FullName"
                               class="w-full bg-slate-50 dark:bg-slate-700 border border-slate-300 dark:border-slate-600 rounded-lg px-4 py-2.5 text-sm focus:ring-2 focus:ring-primary focus:border-primary outline-none transition-all"
                               placeholder="Örn: Ahmet Yılmaz, Ayşe Demir"
                               required>
                        <p class="text-xs text-slate-500 dark:text-slate-400 mt-2">
                            Müşterinin tam adı
                        </p>
                    </div>

                    <!-- Meslek -->
                    <div>
                        <label for="Profession" class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">
                            Meslek/Ünvan <span class="text-red-500">*</span>
                        </label>
                        <input type="text" id="Profession" name="Profession"
                               class="w-full bg-slate-50 dark:bg-slate-700 border border-slate-300 dark:border-slate-600 rounded-lg px-4 py-2.5 text-sm focus:ring-2 focus:ring-primary focus:border-primary outline-none transition-all"
                               placeholder="Örn: Yazılım Mühendisi, Öğretmen, İşletme Sahibi"
                               required>
                        <p class="text-xs text-slate-500 dark:text-slate-400 mt-2">
                            Müşterinin mesleği veya iş unvanı
                        </p>
                    </div>

                    <!-- Yorum -->
                    <div>
                        <label for="Comment" class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">
                            Referans/Yorum <span class="text-red-500">*</span>
                        </label>
                        <textarea id="Comment" name="Comment" rows="6"
                                  class="w-full bg-slate-50 dark:bg-slate-700 border border-slate-300 dark:border-slate-600 rounded-lg px-4 py-2.5 text-sm focus:ring-2 focus:ring-primary focus:border-primary outline-none transition-all resize-none"
                                  placeholder="Müşterinin referansını veya yorumunu girin..."
                                  required></textarea>
                        <div class="flex items-center justify-between mt-2">
                            <p class="text-xs text-slate-500 dark:text-slate-400">
                                Müşterinin geri bildirimi ve deneyimi
                            </p>
                            <p class="text-xs text-slate-500 dark:text-slate-400">
                                <span id="charCount">0</span> karakter
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Sağ Sütun - Görsel Yükleme -->
                <div class="space-y-6">
                    <!-- Profil Görseli Yükleme -->
                    <div>
                        <label class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">
                            Profil Görseli <span class="text-slate-400 text-xs">(Opsiyonel)</span>
                        </label>

                        <!-- Görsel Önizleme -->
                        <div id="imagePreview" class="mb-4 hidden">
                            <div class="relative inline-block">
                                <div class="size-32 rounded-full bg-cover bg-center border-4 border-white dark:border-slate-800 shadow-lg"
                                     id="previewImage"></div>
                                <button type="button" onclick="removeImage()"
                                        class="absolute -top-2 -right-2 size-8 bg-red-500 text-white rounded-full flex items-center justify-center hover:bg-red-600 transition-colors shadow-lg">
                                    <span class="material-symbols-outlined !text-lg">close</span>
                                </button>
                            </div>
                        </div>

                        <!-- Varsayılan Avatar Seçenekleri -->
                        <div id="avatarOptions" class="mb-4">
                            <p class="text-sm text-slate-600 dark:text-slate-400 mb-2">Varsayılan avatar seçin:</p>
                            <div class="flex items-center gap-3">
                                <button type="button" onclick="selectDefaultAvatar('erkek')"
                                        class="size-16 rounded-full bg-blue-100 dark:bg-blue-900/30 flex items-center justify-center hover:scale-105 transition-transform">
                                    <span class="material-symbols-outlined text-blue-600 dark:text-blue-400 !text-2xl">person</span>
                                </button>
                                <button type="button" onclick="selectDefaultAvatar('kadın')"
                                        class="size-16 rounded-full bg-pink-100 dark:bg-pink-900/30 flex items-center justify-center hover:scale-105 transition-transform">
                                    <span class="material-symbols-outlined text-pink-600 dark:text-pink-400 !text-2xl">person</span>
                                </button>
                                <button type="button" onclick="selectDefaultAvatar('nötr')"
                                        class="size-16 rounded-full bg-slate-100 dark:bg-slate-700 flex items-center justify-center hover:scale-105 transition-transform">
                                    <span class="material-symbols-outlined text-slate-600 dark:text-slate-400 !text-2xl">person</span>
                                </button>
                            </div>
                        </div>

                        <!-- Dosya Yükleme -->
                        <div class="border-2 border-dashed border-slate-300 dark:border-slate-600 rounded-lg p-6 text-center hover:border-primary/50 transition-colors cursor-pointer"
                             onclick="document.getElementById('fileInput').click()"
                             id="uploadArea">
                            <span class="material-symbols-outlined !text-4xl text-slate-400 dark:text-slate-500 mb-2">cloud_upload</span>
                            <p class="text-sm text-slate-600 dark:text-slate-400 mb-1">
                                <span class="font-medium text-primary hover:text-primary/80 cursor-pointer">Görsel Yükle</span> veya sürükleyip bırakın
                            </p>
                            <p class="text-xs text-slate-500 dark:text-slate-500">Önerilen: 400x400px (JPG, PNG, WebP - Maks. 5MB)</p>
                            <input type="file" id="fileInput" name="ImageFile" accept="image/*"
                                   class="hidden" onchange="previewImage(event)">
                        </div>

                        <!-- Görsel URL Girişi -->
                        <div class="mt-4">
                            <p class="text-sm text-slate-500 dark:text-slate-400 mb-2">Veya görsel URL'si girin</p>
                            <input type="url" id="ImageUrl" name="ImageUrl"
                                   class="w-full bg-slate-50 dark:bg-slate-700 border border-slate-300 dark:border-slate-600 rounded-lg px-4 py-2.5 text-sm focus:ring-2 focus:ring-primary focus:border-primary outline-none transition-all"
                                   placeholder="https://ornek.com/profil.jpg">
                        </div>
                    </div>

                    <!-- Referans Önizleme -->
                    <div class="pt-4 border-t border-slate-200 dark:border-slate-700">
                        <h3 class="text-sm font-semibold text-slate-700 dark:text-slate-300 mb-3">Önizleme</h3>
                        <div class="bg-slate-50 dark:bg-slate-900/50 rounded-lg border border-slate-200 dark:border-slate-700 p-4">
                            <div class="flex items-center gap-3 mb-3">
                                <div id="previewAvatar" class="size-12 rounded-full bg-primary/10 flex items-center justify-center">
                                    <span class="material-symbols-outlined text-primary">person</span>
                                </div>
                                <div>
                                    <h4 id="previewName" class="text-sm font-semibold text-slate-900 dark:text-white">Müşteri Adı</h4>
                                    <p id="previewProfession" class="text-xs text-slate-500 dark:text-slate-400">Meslek</p>
                                </div>
                            </div>
                            <div class="relative">
                                <span class="material-symbols-outlined absolute -left-2 -top-2 text-yellow-400 !text-sm">format_quote</span>
                                <p id="previewComment" class="text-xs text-slate-600 dark:text-slate-400 italic pl-4">
                                    Referans önizlemesi burada görünecek...
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Form Aksiyonları -->
            <div class="flex items-center justify-between pt-6 border-t border-slate-200 dark:border-slate-700">
                <button type="button" onclick="window.history.back()"
                        class="px-5 py-2.5 border border-slate-300 dark:border-slate-600 text-slate-700 dark:text-slate-300 rounded-lg text-sm font-medium hover:bg-slate-50 dark:hover:bg-slate-700 transition-colors">
                    İptal
                </button>
                <button type="submit"
                        class="bg-primary hover:bg-primary/90 text-white px-6 py-2.5 rounded-lg text-sm font-semibold flex items-center gap-2 transition-colors">
                    <span class="material-symbols-outlined !text-lg">save</span>
                    Referans Oluştur
                </button>
            </div>
        </form>
    </div>
</div>

<script>
    // Gerçek zamanlı önizleme güncellemesi
    document.getElementById('FullName').addEventListener('input', function (e) {
        document.getElementById('previewName').textContent = e.target.value || 'Müşteri Adı';
    });

    document.getElementById('Profession').addEventListener('input', function (e) {
        document.getElementById('previewProfession').textContent = e.target.value || 'Meslek';
    });

    document.getElementById('Comment').addEventListener('input', function (e) {
        const comment = e.target.value || 'Referans önizlemesi burada görünecek...';
        const shortComment = comment.length > 100 ? comment.substring(0, 100) + '...' : comment;
        document.getElementById('previewComment').textContent = shortComment;
        document.getElementById('charCount').textContent = comment.length;
    });

    // Görsel önizleme fonksiyonelliği
    function previewImage(event) {
        const file = event.target.files[0];
        const preview = document.getElementById('previewImage');
        const previewAvatar = document.getElementById('previewAvatar');
        const imagePreview = document.getElementById('imagePreview');
        const uploadArea = document.getElementById('uploadArea');
        const avatarOptions = document.getElementById('avatarOptions');

        if (file) {
            const reader = new FileReader();
            reader.onload = function (e) {
                const imageUrl = e.target.result;
                preview.style.backgroundImage = `url('${imageUrl}')`;
                previewAvatar.style.backgroundImage = `url('${imageUrl}')`;
                previewAvatar.classList.remove('bg-primary/10');
                previewAvatar.innerHTML = '';
                imagePreview.classList.remove('hidden');
                uploadArea.classList.add('hidden');
                avatarOptions.classList.add('hidden');
            }
            reader.readAsDataURL(file);
        }
    }

    function removeImage() {
        const fileInput = document.getElementById('fileInput');
        const imagePreview = document.getElementById('imagePreview');
        const uploadArea = document.getElementById('uploadArea');
        const previewAvatar = document.getElementById('previewAvatar');
        const avatarOptions = document.getElementById('avatarOptions');

        fileInput.value = '';
        imagePreview.classList.add('hidden');
        uploadArea.classList.remove('hidden');
        avatarOptions.classList.remove('hidden');

        // Avatar önizlemesini sıfırla
        previewAvatar.style.backgroundImage = '';
        previewAvatar.classList.add('bg-primary/10');
        previewAvatar.innerHTML = '<span class="material-symbols-outlined text-primary">person</span>';
    }

    function selectDefaultAvatar(type) {
        const previewAvatar = document.getElementById('previewAvatar');
        const imagePreview = document.getElementById('imagePreview');
        const uploadArea = document.getElementById('uploadArea');
        const avatarOptions = document.getElementById('avatarOptions');

        // Yükleme alanını gizle ve varsayılan avatarı göster
        imagePreview.classList.add('hidden');
        uploadArea.classList.add('hidden');
        avatarOptions.classList.remove('hidden');

        // Farklı avatar tipleri için farklı renkler ayarla
        previewAvatar.style.backgroundImage = '';
        previewAvatar.innerHTML = '<span class="material-symbols-outlined !text-xl">person</span>';

        switch (type) {
            case 'erkek':
                previewAvatar.className = 'size-12 rounded-full bg-blue-100 dark:bg-blue-900/30 flex items-center justify-center';
                previewAvatar.querySelector('span').className = 'material-symbols-outlined !text-xl text-blue-600 dark:text-blue-400';
                break;
            case 'kadın':
                previewAvatar.className = 'size-12 rounded-full bg-pink-100 dark:bg-pink-900/30 flex items-center justify-center';
                previewAvatar.querySelector('span').className = 'material-symbols-outlined !text-xl text-pink-600 dark:text-pink-400';
                break;
            case 'nötr':
                previewAvatar.className = 'size-12 rounded-full bg-slate-100 dark:bg-slate-700 flex items-center justify-center';
                previewAvatar.querySelector('span').className = 'material-symbols-outlined !text-xl text-slate-600 dark:text-slate-400';
                break;
        }
    }

    // Sürükle bırak fonksiyonelliği
    const uploadArea = document.getElementById('uploadArea');

    uploadArea.addEventListener('dragover', (e) => {
        e.preventDefault();
        uploadArea.classList.add('border-primary', 'bg-primary/5');
    });

    uploadArea.addEventListener('dragleave', () => {
        uploadArea.classList.remove('border-primary', 'bg-primary/5');
    });

    uploadArea.addEventListener('drop', (e) => {
        e.preventDefault();
        uploadArea.classList.remove('border-primary', 'bg-primary/5');

        const file = e.dataTransfer.files[0];
        if (file && file.type.startsWith('image/')) {
            const fileInput = document.getElementById('fileInput');
            const dataTransfer = new DataTransfer();
            dataTransfer.items.add(file);
            fileInput.files = dataTransfer.files;

            // Önizlemeyi tetikle
            const event = new Event('change');
            fileInput.dispatchEvent(event);
        }
    });

    // Karakter sayısını başlat
    document.addEventListener('DOMContentLoaded', function () {
        const commentInput = document.getElementById('Comment');
        document.getElementById('charCount').textContent = commentInput.value.length;
    });
</script>
﻿@model Medinova.Areas.Admin.Models.UserListViewModel
@{
    ViewBag.Title = "Kullanıcılar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="space-y-6">
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-2xl font-bold text-slate-900 dark:text-white">Kullanıcılar</h1>
            <p class="text-slate-500 dark:text-slate-400 mt-1">Kayıtlı hastaları ve rollerini yönetin.</p>
        </div>
        <a href="@Url.Action("Index", "Role", new { area = "Admin" })"
           class="bg-primary hover:bg-primary/90 text-white px-4 py-2.5 rounded-lg text-sm font-semibold flex items-center gap-2 transition-colors">
            <span class="material-symbols-outlined !text-lg">admin_panel_settings</span>
            Roller
        </a>
    </div>

    @if (Model != null && Model.Users != null && Model.Users.Any())
    {
        <div class="bg-white dark:bg-slate-800 rounded-xl border border-slate-200 dark:border-slate-700 overflow-hidden">
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-slate-200 dark:divide-slate-700">
                    <thead class="bg-slate-50 dark:bg-slate-900/50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-semibold text-slate-500 dark:text-slate-400 uppercase">Ad Soyad</th>
                            <th class="px-6 py-3 text-left text-xs font-semibold text-slate-500 dark:text-slate-400 uppercase">Kullanıcı Adı</th>
                            <th class="px-6 py-3 text-left text-xs font-semibold text-slate-500 dark:text-slate-400 uppercase">Rol</th>
                            <th class="px-6 py-3 text-right text-xs font-semibold text-slate-500 dark:text-slate-400 uppercase">Rol Ata</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-slate-200 dark:divide-slate-700">
                        @foreach (var user in Model.Users)
                        {
                            <tr class="hover:bg-slate-50 dark:hover:bg-slate-900/40">
                                <td class="px-6 py-4 text-sm font-medium text-slate-900 dark:text-white">@user.FullName</td>
                                <td class="px-6 py-4 text-sm text-slate-600 dark:text-slate-300">@user.UserName</td>
                                <td class="px-6 py-4 text-sm text-slate-600 dark:text-slate-300">
                                    @(user.Roles != null && user.Roles.Any() ? string.Join(", ", user.Roles) : "-")
                                </td>
                                <td class="px-6 py-4 text-right">
                                    <form method="post" action="@Url.Action("AssignRole", "User", new { area = "Admin" })" class="flex items-center justify-end gap-2">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="userId" value="@user.UserId" />
                                        <select name="roleId" class="rounded-lg border-slate-200 dark:border-slate-700 bg-white dark:bg-slate-900 text-sm">
                                            <option value="">Rol seçin</option>
                                            @if (Model.Roles != null)
                                            {
                                                foreach (var role in Model.Roles)
                                                {
                                                    <option value="@role.RoleId" @(user.SelectedRoleId == role.RoleId ? "selected" : string.Empty)>@role.RoleName</option>
                                                }
                                            }
                                        </select>
                                        <button type="submit"
                                                class="bg-primary hover:bg-primary/90 text-white px-3 py-2 rounded-lg text-xs font-semibold transition-colors">
                                            Ata
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="bg-white dark:bg-slate-800 rounded-xl border border-slate-200 dark:border-slate-700 p-12 text-center">
            <span class="material-symbols-outlined !text-5xl text-slate-300 dark:text-slate-600 mb-4">group</span>
            <h3 class="text-lg font-semibold text-slate-700 dark:text-slate-300 mb-2">Kullanıcı bulunamadı</h3>
            <p class="text-slate-500 dark:text-slate-400">Henüz kayıtlı bir kullanıcı yok.</p>
        </div>
    }
</div>
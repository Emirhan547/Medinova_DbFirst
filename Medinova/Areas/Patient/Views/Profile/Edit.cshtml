@model Medinova.Dtos.PatientProfileDto
@{
    ViewBag.Title = "Profilimi Düzenle";
    Layout = "~/Areas/Patient/Views/Shared/_PatientLayout.cshtml";
}

<div class="rounded-xl bg-white p-6 shadow-sm border border-[#e2e8f0]">
    <div class="flex flex-col gap-2 md:flex-row md:items-center md:justify-between mb-6">
        <div>
            <h1 class="text-2xl font-extrabold text-navy">Profilimi Düzenle</h1>
            <p class="text-sm text-navy/60">Kişisel bilgilerinizi ve şifre ayarlarınızı güncelleyin.</p>
        </div>
        <span class="inline-flex items-center rounded-full border border-primary px-3 py-1 text-xs font-bold text-primary">Hasta</span>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="mb-4 rounded-lg border border-green-200 bg-green-50 px-4 py-3 text-sm text-green-700">
            @TempData["Success"]
        </div>
    }

    @Html.ValidationSummary(true, "", new { @class = "text-sm text-red-600 mb-4" })

    @using (Html.BeginForm("Edit", "Profile", new { area = "Patient" }, FormMethod.Post, new { @class = "grid gap-6" }))
    {
        @Html.AntiForgeryToken()
        <div class="grid gap-4 md:grid-cols-2">
            <div>
                <label class="text-xs font-bold uppercase text-navy/50">Ad</label>
                @Html.TextBoxFor(m => m.FirstName, new { @class = "mt-1 w-full rounded-lg border-[#e2e8f0] text-sm focus:border-primary focus:ring-primary" })
                @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-xs text-red-600" })
            </div>
            <div>
                <label class="text-xs font-bold uppercase text-navy/50">Soyad</label>
                @Html.TextBoxFor(m => m.LastName, new { @class = "mt-1 w-full rounded-lg border-[#e2e8f0] text-sm focus:border-primary focus:ring-primary" })
                @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-xs text-red-600" })
            </div>
            <div class="md:col-span-2">
                <label class="text-xs font-bold uppercase text-navy/50">Kullanıcı Adı</label>
                @Html.TextBoxFor(m => m.UserName, new { @class = "mt-1 w-full rounded-lg border-[#e2e8f0] text-sm focus:border-primary focus:ring-primary" })
                @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-xs text-red-600" })
            </div>
        </div>

        <div class="rounded-xl border border-[#e2e8f0] bg-background-light p-4">
            <h2 class="text-sm font-bold text-navy">Şifre Güncelle</h2>
            <p class="text-xs text-navy/60 mb-4">Şifrenizi değiştirmek istiyorsanız aşağıdaki alanları doldurun.</p>
            <div class="grid gap-4 md:grid-cols-3">
                <div>
                    <label class="text-xs font-bold uppercase text-navy/50">Mevcut Şifre</label>
                    @Html.PasswordFor(m => m.CurrentPassword, new { @class = "mt-1 w-full rounded-lg border-[#e2e8f0] text-sm focus:border-primary focus:ring-primary" })
                    @Html.ValidationMessageFor(m => m.CurrentPassword, "", new { @class = "text-xs text-red-600" })
                </div>
                <div>
                    <label class="text-xs font-bold uppercase text-navy/50">Yeni Şifre</label>
                    @Html.PasswordFor(m => m.NewPassword, new { @class = "mt-1 w-full rounded-lg border-[#e2e8f0] text-sm focus:border-primary focus:ring-primary" })
                    @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-xs text-red-600" })
                </div>
                <div>
                    <label class="text-xs font-bold uppercase text-navy/50">Yeni Şifre (Tekrar)</label>
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "mt-1 w-full rounded-lg border-[#e2e8f0] text-sm focus:border-primary focus:ring-primary" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-xs text-red-600" })
                </div>
            </div>
        </div>

        <div class="flex flex-col gap-3 sm:flex-row sm:justify-end">
            <a class="inline-flex items-center justify-center rounded-lg border border-gray-200 px-4 py-2 text-sm font-semibold text-gray-600 hover:bg-gray-50"
               href="@Url.Action("Index", "Dashboard", new { area = "Patient" })">
                Panele Dön
            </a>
            <button type="submit" class="inline-flex items-center justify-center rounded-lg bg-primary px-5 py-2 text-sm font-bold text-white hover:bg-primary/90">
                Bilgileri Kaydet
            </button>
        </div>
    }
</div>
@model Medinova.Dtos.PatientAppointmentOverviewDto
@using System.Linq

@{
    ViewBag.Title = "Randevularım";
    Layout = "~/Areas/Patient/Views/Shared/_PatientLayout.cshtml";
}

<!-- HEADER -->
<div class="mb-8">
    <h1 class="text-2xl font-extrabold text-navy">
        Hoş geldiniz, @Session["fullName"]
    </h1>
    <p class="text-sm text-navy/60">
        Randevu durumlarınızı ve yaklaşan planlarınızı buradan takip edebilirsiniz.
    </p>
</div>

<!-- STATS -->
<div class="grid gap-4 md:grid-cols-3 mb-8">
    <div class="rounded-xl bg-white p-4 shadow-sm border border-[#e2e8f0]">
        <p class="text-xs font-bold uppercase text-navy/50">Aktif Randevu</p>
        <div class="mt-2 text-2xl font-extrabold text-navy">
            @(Model != null && Model.ActiveAppointments != null ? Model.ActiveAppointments.Count() : 0)
        </div>
    </div>

    <div class="rounded-xl bg-white p-4 shadow-sm border border-[#e2e8f0]">
        <p class="text-xs font-bold uppercase text-navy/50">Geçmiş Randevu</p>
        <div class="mt-2 text-2xl font-extrabold text-navy">
            @(Model != null && Model.PastAppointments != null ? Model.PastAppointments.Count() : 0)
        </div>
    </div>

    <div class="rounded-xl bg-white p-4 shadow-sm border border-[#e2e8f0]">
        <p class="text-xs font-bold uppercase text-navy/50">İptal Edilen</p>
        <div class="mt-2 text-2xl font-extrabold text-navy">
            @(Model != null && Model.PassiveAppointments != null ? Model.PassiveAppointments.Count() : 0)
        </div>
    </div>
</div>

<div class="grid gap-6">

    <!-- AKTİF RANDEVULAR -->
    <div class="rounded-xl bg-white p-6 shadow-sm border border-[#e2e8f0]">
        <h2 class="text-lg font-bold text-navy">Aktif Randevular</h2>
        <p class="text-sm text-navy/60 mb-4">
            Yaklaşan randevularınızı buradan takip edebilirsiniz.
        </p>

        @if (Model.ActiveAppointments != null && Model.ActiveAppointments.Any())
        {
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-[#e2e8f0] text-sm">
                    <thead class="bg-background-light text-navy/60">
                        <tr>
                            <th class="px-4 py-3 text-left text-xs font-semibold uppercase">Doktor</th>
                            <th class="px-4 py-3 text-left text-xs font-semibold uppercase">Tarih</th>
                            <th class="px-4 py-3 text-left text-xs font-semibold uppercase">Saat</th>
                            <th class="px-4 py-3 text-left text-xs font-semibold uppercase">İşlem</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-[#e2e8f0]">
                        @foreach (var appointment in Model.ActiveAppointments)
                        {
                            <tr>
                                <td class="px-4 py-3 text-navy">
                                    @(appointment.Doctor != null ? appointment.Doctor.FullName : string.Empty)
                                </td>
                                <td class="px-4 py-3 text-navy">
                                    @(appointment.AppointmentDate.HasValue ? appointment.AppointmentDate.Value.ToString("dd.MM.yyyy") : string.Empty)
                                </td>
                                <td class="px-4 py-3 text-navy">
                                    @appointment.AppointmentTime
                                </td>
                                <td class="px-4 py-3">
                                    @using (Html.BeginForm(
                                        "CancelMyAppointment",
                                        "Dashboard",
                                        new { area = "Patient", id = appointment.AppointmentId },
                                        FormMethod.Post))
                                    {
                                        @Html.AntiForgeryToken()
                                        <button type="submit"
                                                class="text-xs font-bold text-red-600 hover:text-red-700">
                                            Pasife Al
                                        </button>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p class="text-sm text-navy/60">
                Aktif randevunuz bulunmuyor.
            </p>
        }
    </div>

    <!-- GEÇMİŞ RANDEVULAR -->
    <div class="rounded-xl bg-white p-6 shadow-sm border border-[#e2e8f0]">
        <h2 class="text-lg font-bold text-navy">Geçmiş Randevular</h2>
        <p class="text-sm text-navy/60 mb-4">
            Tamamlanan randevularınız listelenir.
        </p>

        @if (Model.PastAppointments != null && Model.PastAppointments.Any())
        {
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-[#e2e8f0] text-sm">
                    <thead class="bg-background-light text-navy/60">
                        <tr>
                            <th class="px-4 py-3 text-left text-xs font-semibold uppercase">Doktor</th>
                            <th class="px-4 py-3 text-left text-xs font-semibold uppercase">Tarih</th>
                            <th class="px-4 py-3 text-left text-xs font-semibold uppercase">Saat</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-[#e2e8f0]">
                        @foreach (var appointment in Model.PastAppointments)
                        {
                            <tr>
                                <td class="px-4 py-3 text-navy">
                                    @(appointment.Doctor != null ? appointment.Doctor.FullName : string.Empty)
                                </td>
                                <td class="px-4 py-3 text-navy">
                                    @(appointment.AppointmentDate.HasValue ? appointment.AppointmentDate.Value.ToString("dd.MM.yyyy") : string.Empty)
                                </td>
                                <td class="px-4 py-3 text-navy">
                                    @appointment.AppointmentTime
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p class="text-sm text-navy/60">
                Geçmiş randevunuz bulunmuyor.
            </p>
        }
    </div>

    <!-- PASİF RANDEVULAR -->
    <div class="rounded-xl bg-white p-6 shadow-sm border border-[#e2e8f0]">
        <h2 class="text-lg font-bold text-navy">Pasife Alınan Randevular</h2>
        <p class="text-sm text-navy/60 mb-4">
            İptal ettiğiniz randevular burada görünür.
        </p>

        @if (Model.PassiveAppointments != null && Model.PassiveAppointments.Any())
        {
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-[#e2e8f0] text-sm">
                    <thead class="bg-background-light text-navy/60">
                        <tr>
                            <th class="px-4 py-3 text-left text-xs font-semibold uppercase">Doktor</th>
                            <th class="px-4 py-3 text-left text-xs font-semibold uppercase">Tarih</th>
                            <th class="px-4 py-3 text-left text-xs font-semibold uppercase">Saat</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-[#e2e8f0]">
                        @foreach (var appointment in Model.PassiveAppointments)
                        {
                            <tr>
                                <td class="px-4 py-3 text-navy">
                                    @(appointment.Doctor != null ? appointment.Doctor.FullName : string.Empty)
                                </td>
                                <td class="px-4 py-3 text-navy">
                                    @(appointment.AppointmentDate.HasValue ? appointment.AppointmentDate.Value.ToString("dd.MM.yyyy") : string.Empty)
                                </td>
                                <td class="px-4 py-3 text-navy">
                                    @appointment.AppointmentTime
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p class="text-sm text-navy/60">
                Pasife alınmış randevunuz bulunmuyor.
            </p>
        }
    </div>

</div>

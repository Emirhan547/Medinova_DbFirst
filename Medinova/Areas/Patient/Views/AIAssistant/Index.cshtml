@model IEnumerable<Medinova.Models.AIConversation>
@{
    ViewBag.Title = "AI Asistan";
    Layout = "~/Areas/Patient/Views/Shared/_PatientLayout.cshtml";
}

<div class="max-w-6xl mx-auto h-[calc(100vh-8rem)] flex flex-col">

    <!-- HEADER -->
    <div class="mb-6">
        <div class="flex items-center justify-between">
            <div>
                <h1 class="text-3xl font-black text-navyDark flex items-center gap-3">
                    <span class="material-symbols-outlined text-purple-600">smart_toy</span>
                    AI Sağlık Asistanı
                </h1>
                <p class="text-navy/70 mt-2 max-w-2xl">
                    Sağlık sorularınızı sorun, genel öneriler alın. <span class="text-red-600 font-bold">NOT:</span> Acil durumlarda 112'yi arayın.
                </p>
            </div>
            <div class="flex items-center gap-3">
                <span class="inline-flex items-center gap-2 rounded-full bg-purple-100 px-4 py-2 text-sm font-bold text-purple-700">
                    <span class="material-symbols-outlined text-base">psychology</span>
                    GPT-4 Powered
                </span>
                <button onclick="clearChat()"
                        class="inline-flex items-center gap-2 rounded-xl border border-gray-300 px-4 py-2 text-sm font-bold text-navy hover:bg-gray-50 transition-colors">
                    <span class="material-symbols-outlined text-base">delete</span>
                    Temizle
                </button>
            </div>
        </div>
    </div>

    <!-- CHAT CONTAINER -->
    <div id="chatContainer"
         class="flex-1 overflow-y-auto rounded-2xl bg-gradient-to-b from-gray-50 to-white border border-gray-200 p-6 space-y-6">

        @if (Model != null && Model.Any())
        {
            foreach (var conv in Model.OrderBy(c => c.CreatedDate))
            {
                <!-- User Message -->
                <div class="flex justify-end">
                    <div class="max-w-[75%] rounded-2xl rounded-br-md bg-gradient-to-r from-primary to-primaryDark text-white p-5 shadow-sm">
                        <div class="text-sm">
                            @Html.Raw(HttpUtility.HtmlEncode(conv.UserMessage).Replace("\n", "<br/>"))
                        </div>
                        <div class="mt-3 text-xs text-white/70 flex items-center justify-end gap-1">
                            <span class="material-symbols-outlined text-xs">schedule</span>
                            @conv.CreatedDate?.ToString("HH:mm") · Siz
                        </div>
                    </div>
                </div>

                <!-- AI Response -->
                <div class="flex justify-start gap-4">
                    <div class="h-10 w-10 rounded-full bg-gradient-to-br from-purple-500 to-purple-600 flex items-center justify-center shadow-sm">
                        <span class="material-symbols-outlined text-white">smart_toy</span>
                    </div>
                    <div class="max-w-[75%] rounded-2xl rounded-bl-md bg-white border border-gray-200 p-5 shadow-sm">
                        <div class="text-sm text-navy leading-relaxed">
                            @Html.Raw(HttpUtility.HtmlEncode(conv.AIResponse).Replace("\n", "<br/>"))
                        </div>
                        <div class="mt-3 text-xs text-navy/50 flex items-center gap-1">
                            <span class="material-symbols-outlined text-xs">schedule</span>
                            @conv.CreatedDate?.ToString("HH:mm") · AI Asistan
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <!-- WELCOME SCREEN -->
            <div class="h-full flex flex-col items-center justify-center text-center px-4">
                <div class="mb-6">
                    <div class="h-20 w-20 rounded-full bg-gradient-to-br from-purple-100 to-purple-200 flex items-center justify-center mb-4">
                        <span class="material-symbols-outlined text-4xl text-purple-600">psychology_alt</span>
                    </div>
                    <h3 class="text-2xl font-black text-navyDark mb-2">AI Sağlık Asistanına Hoş Geldiniz</h3>
                    <p class="text-navy/70 max-w-md">
                        Sağlıkla ilgili sorularınızı sorun, genel bilgiler ve öneriler alın.
                    </p>
                </div>

                <!-- QUICK QUESTIONS -->
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4 max-w-2xl w-full">
                    <button onclick="askQuickQuestion('Baş ağrısı için ne yapmalıyım?')"
                            class="rounded-xl border border-gray-200 bg-white p-4 hover:border-primary/50 hover:shadow-sm transition-all text-left group">
                        <div class="flex items-center gap-3 mb-2">
                            <div class="h-10 w-10 rounded-lg bg-blue-100 flex items-center justify-center group-hover:bg-blue-200 transition-colors">
                                <span class="material-symbols-outlined text-blue-600">sick</span>
                            </div>
                            <span class="font-bold text-navy">Baş Ağrısı</span>
                        </div>
                        <p class="text-xs text-navy/60">Baş ağrısı için öneriler</p>
                    </button>

                    <button onclick="askQuickQuestion('Grip oldum, ne yapmalıyım?')"
                            class="rounded-xl border border-gray-200 bg-white p-4 hover:border-primary/50 hover:shadow-sm transition-all text-left group">
                        <div class="flex items-center gap-3 mb-2">
                            <div class="h-10 w-10 rounded-lg bg-emerald-100 flex items-center justify-center group-hover:bg-emerald-200 transition-colors">
                                <span class="material-symbols-outlined text-emerald-600">coronavirus</span>
                            </div>
                            <span class="font-bold text-navy">Grip & Soğuk Algınlığı</span>
                        </div>
                        <p class="text-xs text-navy/60">Grip için tavsiyeler</p>
                    </button>

                    <button onclick="askQuickQuestion('Sağlıklı beslenme önerileri nelerdir?')"
                            class="rounded-xl border border-gray-200 bg-white p-4 hover:border-primary/50 hover:shadow-sm transition-all text-left group">
                        <div class="flex items-center gap-3 mb-2">
                            <div class="h-10 w-10 rounded-lg bg-amber-100 flex items-center justify-center group-hover:bg-amber-200 transition-colors">
                                <span class="material-symbols-outlined text-amber-600">nutrition</span>
                            </div>
                            <span class="font-bold text-navy">Beslenme</span>
                        </div>
                        <p class="text-xs text-navy/60">Sağlıklı beslenme ipuçları</p>
                    </button>
                </div>

                <!-- WARNING -->
                <div class="mt-8 max-w-md">
                    <div class="rounded-xl bg-red-50 border border-red-200 p-4">
                        <div class="flex items-start gap-3">
                            <span class="material-symbols-outlined text-red-600">warning</span>
                            <div class="text-left">
                                <p class="text-sm font-bold text-red-800">Önemli Uyarı</p>
                                <p class="text-xs text-red-700 mt-1">
                                    Bu sistem yalnızca bilgilendirme amaçlıdır. Teşhis veya tedavi önerisi değildir.
                                    <strong>Acil durumlarda 112'yi arayın veya en yakın sağlık kuruluşuna başvurun.</strong>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

        <!-- TYPING INDICATOR (Hidden by default) -->
        <div id="typingIndicator" class="hidden flex justify-start gap-4">
            <div class="h-10 w-10 rounded-full bg-gradient-to-br from-purple-500 to-purple-600 flex items-center justify-center shadow-sm">
                <span class="material-symbols-outlined text-white">smart_toy</span>

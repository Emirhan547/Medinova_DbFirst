<!DOCTYPE html>
<html class="light" lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Medinova | Hasta Paneli</title>

    <!-- Tailwind -->
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@200..800&display=swap" rel="stylesheet" />

    <!-- Tailwind Config -->
    <script>
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        primary: "#12b8de",
                        navy: "#354F8E",
                        "background-light": "#f5f7f9",
                    },
                    fontFamily: {
                        display: ["Manrope", "sans-serif"]
                    },
                    borderRadius: {
                        DEFAULT: "0.25rem",
                        lg: "0.5rem",
                        xl: "0.75rem",
                        full: "9999px"
                    }
                }
            }
        }
    </script>

    <style>
        .material-symbols-outlined {
            font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
        }

        .sidebar-active {
            background-color: rgba(18, 184, 222, 0.1);
            color: #12b8de;
            border-right: 3px solid #12b8de;
        }
    </style>
</head>

<body class="bg-background-light font-display text-[#0d191b]">
    <div class="flex h-screen flex-col overflow-hidden">

        <!-- HEADER -->
        <header class="z-20 flex h-16 items-center justify-between bg-navy px-6 shadow-md text-white">
            <div class="flex items-center gap-8">
                <div class="flex items-center gap-2">
                    <div class="flex h-8 w-8 items-center justify-center rounded-lg bg-primary">
                        <span class="material-symbols-outlined text-white">
                            medical_services
                        </span>
                    </div>
                    <h1 class="text-xl font-bold tracking-tight">Medinova</h1>
                </div>

                <!-- Search -->
                <div class="hidden md:block">
                    <div class="relative">
                        <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-white/60 text-sm">
                            search
                        </span>
                        <input type="text"
                               placeholder="Doktor veya kayıt ara..."
                               class="w-64 rounded-lg bg-white/10 py-1.5 pl-10 pr-3 text-sm text-white placeholder-white/60
                                  focus:bg-white/20 focus:outline-none focus:ring-1 focus:ring-primary transition" />
                    </div>
                </div>
            </div>

            <!-- Right -->
            <div class="flex items-center gap-4">
                <button class="relative rounded-lg p-2 hover:bg-white/10 transition">
                    <span class="material-symbols-outlined">notifications</span>
                    <span class="absolute right-2 top-2 h-2 w-2 rounded-full bg-primary border-2 border-navy"></span>
                </button>

                <div class="h-8 w-px bg-white/20"></div>

                <div class="flex items-center gap-3">
                    <div class="text-right">
                        <p class="text-sm font-semibold leading-none">
                            @Session["fullName"]
                        </p>
                        <p class="text-[10px] uppercase tracking-widest text-white/70">
                            Hasta Paneli
                        </p>
                    </div>
                    <div class="flex h-10 w-10 items-center justify-center rounded-full bg-white border-2 border-primary/50">
                        <span class="material-symbols-outlined text-primary">person</span>
                    </div>
                </div>

                <a href="@Url.Action("Logout", "Account", new { area = "" })"
                   class="text-xs font-semibold text-white/80 hover:text-white">
                    Çıkış Yap
                </a>
            </div>
        </header>

        <!-- BODY -->
        <div class="flex flex-1 overflow-hidden">

            <!-- SIDEBAR -->
            <aside class="hidden lg:flex w-64 flex-col border-r border-[#e2e8f0] bg-white">
                <nav class="flex-1 py-6">
                    <div class="px-4 mb-3 text-[10px] font-bold uppercase tracking-wider text-navy/40">
                        Menü
                    </div>

                    <a href="@Url.Action("Index", "Dashboard", new { area = "Patient" })"
                       class="flex items-center gap-3 px-6 py-3 text-navy/70 hover:bg-background-light transition">
                        <span class="material-symbols-outlined">dashboard</span>
                        <span class="text-sm font-medium">Ana Sayfa</span>
                    </a>

                    <a href="@Url.Action("MyAppointments", "Dashboard", new { area = "Patient" })"
                       class="flex items-center gap-3 px-6 py-3 text-navy/70 hover:bg-background-light transition">
                        <span class="material-symbols-outlined">calendar_today</span>
                        <span class="text-sm font-medium">Randevularım</span>
                    </a>

                    <a href="@Url.Action("Index", "AIAssistant", new { area = "Patient" })"
                       class="flex items-center gap-3 px-6 py-3 text-navy/70 hover:bg-background-light transition">
                        <span class="material-symbols-outlined">smart_toy</span>
                        <span class="text-sm font-medium">AI Asistan</span>
                    </a>

                    <div class="px-4 mt-8 mb-3 text-[10px] font-bold uppercase tracking-wider text-navy/40">
                        Hesap
                    </div>

                    <a href="@Url.Action("Edit", "Profile", new { area = "Patient" })"
                       class="flex items-center gap-3 px-6 py-3 text-navy/70 hover:bg-background-light transition">
                        <span class="material-symbols-outlined">settings</span>
                        <span class="text-sm font-medium">Profil Ayarları</span>
                    </a>

                   
                </nav>

                <!-- TIP BOX -->
                <div class="border-t border-[#e2e8f0] p-4">
                    <div class="rounded-xl bg-navy/5 p-4">
                        <p class="text-xs font-bold text-navy mb-1">Sağlık İpucu</p>
                        <p class="text-[11px] text-navy/70">
                            Günlük 2 litre su tüketmek enerjinizi artırır.
                        </p>
                    </div>
                </div>
            </aside>

            <!-- CONTENT -->
            <main class="flex-1 overflow-y-auto p-8 bg-background-light">
                @RenderBody()
            </main>

        </div>
    </div>
</body>
</html>

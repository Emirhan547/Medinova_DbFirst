<!DOCTYPE html>
<html lang="tr" class="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Medinova | Hasta Paneli</title>

    <!-- Tailwind -->
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@200..800&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet" />

    <script>
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        primary: "#0EA5E9",
                        primaryDark: "#0284C7",
                        navy: "#1E293B",
                        navyDark: "#0F172A",
                        background: "#F8FAFC",
                        sidebar: "#1E293B",
                        sidebarHover: "#334155",
                        topbar: "#2563EB", // Daha açık mavi (#2563EB = blue-600)
                        topbarGradient: "linear-gradient(135deg, #3B82F6 0%, #2563EB 100%)" // Yumuşak gradient
                    },
                    fontFamily: {
                        display: ["Inter", "Manrope", "sans-serif"]
                    },
                    boxShadow: {
                        'strong': '0 10px 40px -15px rgba(0, 0, 0, 0.25)',
                        'card': '0 8px 30px rgba(0, 0, 0, 0.08)',
                        'card-hover': '0 12px 40px rgba(0, 0, 0, 0.12)',
                        'sidebar': '4px 0 20px rgba(0, 0, 0, 0.05)'
                    },
                    animation: {
                        'fade-in': 'fadeIn 0.5s ease-in-out',
                        'slide-up': 'slideUp 0.3s ease-out'
                    }
                }
            }
        }
    </script>

    <style>
        .material-symbols-outlined {
            font-variation-settings: 'FILL' 0, 'wght' 400;
        }

        .nav-active {
            color: #0EA5E9;
            border-bottom: 3px solid #0EA5E9;
            font-weight: 700;
        }

        body {
            font-feature-settings: "ss01", "ss02", "cv01", "cv02";
        }

        .gradient-bg {
            background: linear-gradient(135deg, #3B82F6 0%, #2563EB 100%); /* Yumuşak mavi gradient */
        }

        .gradient-border {
            position: relative;
            border: 2px solid transparent;
            background: linear-gradient(white, white) padding-box, linear-gradient(135deg, #0EA5E9 0%, #3B82F6 100%) border-box;
        }

        .stat-card-gradient {
            background: linear-gradient(135deg, #0EA5E9 0%, #3B82F6 100%);
            position: relative;
            overflow: hidden;
        }

            .stat-card-gradient::after {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: linear-gradient(45deg, transparent 30%, rgba(255,255,255,0.1) 50%, transparent 70%);
                animation: shimmer 2s infinite;
            }

        @@keyframes shimmer {
            0% {
                transform: translateX(-100%);
            }

            100% {
                transform: translateX(100%);
            }
        }

        @@keyframes fadeIn {
            0% {
                opacity: 0;
            }

            100% {
                opacity: 1;
            }
        }

        @@keyframes slideUp {
            0% {
                transform: translateY(10px);
                opacity: 0;
            }

            100% {
                transform: translateY(0);
                opacity: 1;
            }
        }
    </style>
</head>

<body class="bg-background font-display text-navyDark antialiased">

    <!-- HEADER (Sticky) -->
    <header class="sticky top-0 z-50">
        <!-- TOP BAR - Yumuşak mavi gradient -->
        <div class="gradient-bg text-white shadow-lg">
            <div class="mx-auto max-w-7xl px-6 h-20 flex items-center justify-between">

                <!-- LOGO -->
                <div class="flex items-center gap-3">
                    <div class="flex h-10 w-10 items-center justify-center rounded-xl bg-white/20 backdrop-blur-sm">
                        <span class="material-symbols-outlined text-white">medical_services</span>
                    </div>
                    <span class="text-xl font-black tracking-tight">MEDINOVA</span>
                </div>

                <!-- SEARCH -->
                <div class="hidden md:block">
                    <div class="relative">
                        <span class="material-symbols-outlined absolute left-4 top-1/2 -translate-y-1/2 text-white/70">
                            search
                        </span>
                        <input type="text"
                               placeholder="Doktor veya kayıt ara..."
                               class="w-80 rounded-xl bg-white/15 backdrop-blur-sm py-3 pl-12 pr-4 text-white placeholder-white/60
                                      focus:bg-white/25 focus:outline-none focus:ring-2 focus:ring-white/30 transition-all duration-300" />
                    </div>
                </div>

                <!-- RIGHT -->
                <div class="flex items-center gap-4">
                    <button class="relative rounded-xl p-3 hover:bg-white/15 transition-all duration-300 group">
                        <span class="material-symbols-outlined group-hover:scale-110 transition-transform">notifications</span>
                        <span class="absolute right-3 top-3 h-2.5 w-2.5 rounded-full bg-red-400 ring-2 ring-white"></span>
                    </button>

                    @{
                        var profileImageUrl = Session["profileImageUrl"] as string;
                    }

                    <div class="flex items-center gap-4">
                        <div class="text-right hidden sm:block">
                            <p class="text-sm font-bold leading-none">@Session["fullName"]</p>
                            <p class="text-[11px] uppercase tracking-widest text-white/80 mt-1 font-semibold">HASTA PANELİ</p>
                        </div>

                        <div class="h-11 w-11 rounded-full bg-white/20 backdrop-blur-sm overflow-hidden border-2 border-white/30 p-0.5">
                            @if (!string.IsNullOrWhiteSpace(profileImageUrl))
                            {
                                <img src="@profileImageUrl" class="h-full w-full object-cover rounded-full" />
                            }
                            else
                            {
                                <span class="material-symbols-outlined text-white flex items-center justify-center h-full">person</span>
                            }
                        </div>
                    </div>

                    <a href="@Url.Action("Logout", "Account", new { area = "" })"
                       class="text-sm font-semibold text-white/90 hover:text-white transition-all duration-300 flex items-center gap-2 px-4 py-2 rounded-lg hover:bg-white/10">
                        <span class="material-symbols-outlined text-base">logout</span>
                        Çıkış
                    </a>
                </div>
            </div>
        </div>

        <!-- NAVBAR - Koyu mavi (sidebar rengi) -->
        <nav class="bg-sidebar text-white shadow-md">
            <div class="mx-auto max-w-7xl px-6">
                <div class="h-14 flex items-center gap-8">
                    <a href="@Url.Action("Index", "Dashboard", new { area = "Patient" })"
                       class="inline-flex items-center gap-3 py-4 hover:text-primary transition-all duration-300 group relative">
                        <span class="material-symbols-outlined text-[20px] group-hover:scale-110 transition-transform">dashboard</span>
                        <span class="font-medium">Ana Sayfa</span>
                        <div class="absolute bottom-0 left-0 w-0 h-0.5 bg-primary group-hover:w-full transition-all duration-300"></div>
                    </a>

                    <a href="@Url.Action("MyAppointments", "Dashboard", new { area = "Patient" })"
                       class="inline-flex items-center gap-3 py-4 hover:text-primary transition-all duration-300 group relative">
                        <span class="material-symbols-outlined text-[20px] group-hover:scale-110 transition-transform">calendar_today</span>
                        <span class="font-medium">Randevularım</span>
                        <div class="absolute bottom-0 left-0 w-0 h-0.5 bg-primary group-hover:w-full transition-all duration-300"></div>
                    </a>

                    <a href="@Url.Action("Index", "AIAssistant", new { area = "Patient" })"
                       class="inline-flex items-center gap-3 py-4 hover:text-primary transition-all duration-300 group relative">
                        <span class="material-symbols-outlined text-[20px] group-hover:scale-110 transition-transform">smart_toy</span>
                        <span class="font-medium">AI Asistan</span>
                        <div class="absolute bottom-0 left-0 w-0 h-0.5 bg-primary group-hover:w-full transition-all duration-300"></div>
                    </a>

                    <a href="@Url.Action("Edit", "Profile", new { area = "Patient" })"
                       class="inline-flex items-center gap-3 py-4 hover:text-primary transition-all duration-300 group relative">
                        <span class="material-symbols-outlined text-[20px] group-hover:scale-110 transition-transform">settings</span>
                        <span class="font-medium">Profil</span>
                        <div class="absolute bottom-0 left-0 w-0 h-0.5 bg-primary group-hover:w-full transition-all duration-300"></div>
                    </a>
                </div>
            </div>
        </nav>
    </header>

    <!-- PAGE SURFACE -->
    <main class="bg-background min-h-[calc(100vh-136px)]">
        <div class="mx-auto max-w-7xl px-6 py-10">
            @RenderBody()
        </div>
    </main>

</body>
</html>
@model Medinova.Dtos.DoctorAppointmentOverviewDto
@using System
@using System.Linq
@{
    Layout = "~/Areas/Doctor/Views/Shared/_DoctorLayout.cshtml";
}


        <div class="mb-8">
            <div class="flex flex-col gap-3 lg:flex-row lg:items-end lg:justify-between">
                <div>

                    <h1 class="text-2xl font-extrabold text-navy-accent">Randevular</h1>
                    <p class="text-sm text-gray-500">@Model.DoctorName için aktif randevular</p>
                </div>
                <div class="flex flex-wrap gap-3">
                    <div class="rounded-lg bg-white px-4 py-3 shadow-sm border border-gray-200">
                        <p class="text-xs font-bold uppercase text-gray-400">Aktif</p>
                        <p class="text-lg font-extrabold text-navy-accent">@(Model != null && Model.ActiveAppointments != null ? Model.ActiveAppointments.Count() : 0)</p>
                    </div>
                    <div class="rounded-lg bg-white px-4 py-3 shadow-sm border border-gray-200">
                        <p class="text-xs font-bold uppercase text-gray-400">Bugün</p>
                        <p class="text-lg font-extrabold text-navy-accent">@(Model != null && Model.ActiveAppointments != null ? Model.ActiveAppointments.Count(a => a.AppointmentDate.HasValue && a.AppointmentDate.Value.Date == DateTime.Today) : 0)</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
            @if (Model.ActiveAppointments != null && Model.ActiveAppointments.Any())
            {
                <div class="overflow-x-auto">
 
                            <table class="min-w-full divide-y divide-gray-200 text-sm">
                                <thead class="bg-gray-50 text-gray-500">
                                    <tr>
 
                                        <th class="px-4 py-3 text-left text-xs font-semibold uppercase">Hasta</th>
                                        <th class="px-4 py-3 text-left text-xs font-semibold uppercase">Tarih</th>
                                        <th class="px-4 py-3 text-left text-xs font-semibold uppercase">Saat</th>
                                        <th class="px-4 py-3 text-left text-xs font-semibold uppercase">İşlem</th>
                                    </tr>
                                </thead>
                          
                                <tbody class="divide-y divide-gray-200">
                                    @foreach (var appointment in Model.ActiveAppointments)
                                    {
                                        <tr>
                                            
                                            <td class="px-4 py-3 text-gray-700">@appointment.FullName</td>
                                            <td class="px-4 py-3 text-gray-700">@(appointment.AppointmentDate.HasValue ? appointment.AppointmentDate.Value.ToString("dd.MM.yyyy") : string.Empty)</td>
                                            <td class="px-4 py-3 text-gray-700">@appointment.AppointmentTime</td>
                                            <td class="px-4 py-3 text-gray-700">
                                                @using (Html.BeginForm("Deactivate", "Dashboard", new { area = "Doctor", id = appointment.AppointmentId }, FormMethod.Post))
                                                {
                                                    
                                                    <button type="submit" class="text-xs font-bold text-red-600 hover:text-red-700">Pasife Al</button>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                </div>
            }
            else
            {
                
                <p class="text-sm text-gray-500">Aktif randevu bulunmuyor.</p>
            }
        </div>
    

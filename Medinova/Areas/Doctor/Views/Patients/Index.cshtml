@model IList<Medinova.Dtos.DoctorPatientSummaryDto>
@using System.Linq

@{
    ViewBag.Title = "Hastalarım";
    Layout = "~/Areas/Doctor/Views/Shared/_DoctorLayout.cshtml";
}

<div class="mb-8">
    <h1 class="text-2xl font-extrabold text-navy-accent">Hastalarım</h1>
    <p class="text-sm text-gray-500">Size randevu alan hastaların temel bilgilerini ve son randevu tarihlerini görüntüleyin.</p>
</div>

<div class="bg-white rounded-xl soft-shadow p-6 border border-gray-200">
    <div class="flex items-center justify-between mb-4">
        <h2 class="text-lg font-bold text-navy-accent">Hasta Listesi</h2>
        <span class="text-xs font-semibold text-gray-400">@((Model != null) ? Model.Count : 0) kayıt</span>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200 text-sm">
                <thead class="bg-gray-50 text-gray-500">
                    <tr>
                        <th class="px-4 py-3 text-left text-xs font-semibold uppercase">Hasta</th>
                        <th class="px-4 py-3 text-left text-xs font-semibold uppercase">Kan Grubu</th>
                        <th class="px-4 py-3 text-left text-xs font-semibold uppercase">Boy/Kilo</th>
                        <th class="px-4 py-3 text-left text-xs font-semibold uppercase">Son Randevu</th>
                        <th class="px-4 py-3 text-left text-xs font-semibold uppercase">Toplam</th>
                        <th class="px-4 py-3 text-left text-xs font-semibold uppercase">İşlem</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                    @foreach (var patient in Model)
                    {
                        <tr>
                            <td class="px-4 py-3">
                                <div class="flex items-center gap-3">
                                    <div class="size-10 rounded-full overflow-hidden border border-primary/20 bg-white flex items-center justify-center">
                                        @if (!string.IsNullOrWhiteSpace(patient.ImageUrl))
                                        {
                                            <img src="@patient.ImageUrl" alt="@patient.FullName" class="h-full w-full object-cover" />
                                        }
                                        else
                                        {
                                            <span class="material-symbols-outlined text-primary">person</span>
                                        }
                                    </div>
                                    <div>
                                        <p class="text-sm font-semibold text-navy-accent">@patient.FullName</p>
                                        <p class="text-xs text-gray-400">#@patient.PatientId</p>
                                    </div>
                                </div>
                            </td>
                            <td class="px-4 py-3 text-gray-600">
                                @(string.IsNullOrWhiteSpace(patient.BloodType) ? "-" : patient.BloodType)
                            </td>
                            <td class="px-4 py-3 text-gray-600">
                                @(patient.HeightCm.HasValue ? patient.HeightCm + " cm" : "-") / @(patient.WeightKg.HasValue ? patient.WeightKg + " kg" : "-")
                            </td>
                            <td class="px-4 py-3 text-gray-600">
                                @(patient.LastAppointmentDate.HasValue ? patient.LastAppointmentDate.Value.ToString("dd.MM.yyyy") : "-")
                            </td>
                            <td class="px-4 py-3 text-gray-600">
                                @patient.AppointmentCount
                            </td>
                            <td class="px-4 py-3">
                                <a href="@Url.Action("Details", "Patients", new { area = "Doctor", id = patient.PatientId })" class="text-xs font-semibold text-primary hover:text-primary/80">Detay</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p class="text-sm text-gray-500">Henüz hasta kaydı bulunmuyor.</p>
    }
</div>
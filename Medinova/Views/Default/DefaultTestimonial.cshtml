@model Medinova.Dtos.Defaults.DefaultTestimonialDto

<div class="container-fluid py-5">
    <div class="container">

        <div class="text-center mx-auto mb-5" style="max-width: 500px;">
            <h5 class="d-inline-block text-primary text-uppercase border-bottom border-5">
                Hasta Yorumları
            </h5>
            <h1 class="display-4">Hizmetlerimiz Hakkında Görüşler</h1>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-8">

                <div class="owl-carousel testimonial-carousel">

                    @if (Model?.Testimonials == null || !Model.Testimonials.Any())
                    {
                        <div class="testimonial-item text-center">
                            <p>Henüz içerik yok.</p>
                        </div>
                    }
                    else
                    {
                        foreach (var testimonial in Model.Testimonials)
                        {
                            <div class="testimonial-item text-center">

                                <div class="position-relative mb-5">
                                    @if (!string.IsNullOrWhiteSpace(testimonial.ImageUrl))
                                    {
                                        <img class="img-fluid rounded-circle mx-auto"
                                             src="@testimonial.ImageUrl"
                                             alt="@testimonial.FullName" />
                                    }
                                    else
                                    {
                                        <div class="d-flex align-items-center justify-content-center bg-light border border-2 border-primary rounded-circle mx-auto"
                                             style="width: 120px; height: 120px;">
                                            <i class="fa fa-user text-primary fa-2x"></i>
                                        </div>
                                    }
                                    <div class="position-absolute top-100 start-50 translate-middle
                                                d-flex align-items-center justify-content-center
                                                bg-white rounded-circle"
                                         style="width: 60px; height: 60px;">
                                        <i class="fa fa-quote-left fa-2x text-primary"></i>
                                    </div>
                                </div>

                                <p class="fs-4 fw-normal">@testimonial.Comment</p>
                                <hr class="w-25 mx-auto" />
                                <h3>@testimonial.FullName</h3>
                                <h6 class="fw-normal text-primary mb-3">
                                    @testimonial.Profession
                                </h6>

                            </div>
                        }
                    }

                </div>

            </div>
        </div>

    </div>
</div>

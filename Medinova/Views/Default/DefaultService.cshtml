@model Medinova.Dtos.Defaults.DefaultServiceDto

<div class="container-fluid py-5">
    <div class="container">

        <div class="text-center mx-auto mb-5" style="max-width: 500px;">
            <h5 class="d-inline-block text-primary text-uppercase border-bottom border-5">
                Hizmetler
            </h5>
            <h1 class="display-4">Üstün Sağlık Hizmetleri</h1>
        </div>

        <div class="row g-5">

            @if (Model?.Services == null || !Model.Services.Any())
            {
                <div class="col-12 text-center">
                    <p>Henüz içerik yok.</p>
                </div>
            }
            else
            {
                foreach (var service in Model.Services)
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="service-item bg-light rounded d-flex flex-column
align-items-center justify-content-center text-center shadow-sm">
                            <div class="service-icon mb-4">
                                <i class="@service.Icon text-white"></i>
                            </div>

                            <h4 class="mb-3">@service.Title</h4>
                            <p class="m-0 text-muted">@service.Description</p>

                            <a class="btn btn-lg btn-primary rounded-pill" href="#!">
                                <i class="bi bi-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                }
            }

        </div>

    </div>
</div>

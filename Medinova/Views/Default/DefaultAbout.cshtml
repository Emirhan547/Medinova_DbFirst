@model Medinova.Dtos.Defaults.DefaultAboutDto

<div class="container-fluid py-5">
    <div class="container">

        @if (Model?.About == null && (Model?.Items == null || !Model.Items.Any()))
        {
            <p class="text-center">Henüz içerik yok</p>
        }
        else
        {
            <div class="row gx-5">

                <!-- SOL TARAF (GÖRSEL) -->
                <div class="col-lg-5 mb-5 mb-lg-0" style="min-height: 500px;">
                    <div class="position-relative h-100">
                        @if (!string.IsNullOrWhiteSpace(Model?.About?.ImageUrl))
                        {
                            <img class="position-absolute w-100 h-100 rounded"
                                 src="@Model.About.ImageUrl"
                                 style="object-fit: cover;" />
                        }
                    </div>
                </div>

                <!-- SAĞ TARAF (İÇERİK) -->
                <div class="col-lg-7">

                    @if (Model?.About != null)
                    {
                        <div class="mb-4">
                            <h5 class="d-inline-block text-primary text-uppercase border-bottom border-5">
                                About Us
                            </h5>
                            <h1 class="display-4">@Model.About.Title</h1>
                        </div>

                        <p>@Model.About.Description</p>
                    }

                    <div class="row g-3 pt-3">
                        @if (Model?.Items != null && Model.Items.Any())
                        {
                            foreach (var item in Model.Items)
                            {
                                <div class="col-sm-3 col-6">
                                    <div class="bg-light text-center rounded-circle py-4">
                                        <i class="@item.Icon text-primary mb-3"></i>
                                        <h6 class="mb-0">@item.Name</h6>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="col-12">
                                <p>Henüz içerik yok</p>
                            </div>
                        }
                    </div>

                </div>

            </div>
        }

    </div>
</div>

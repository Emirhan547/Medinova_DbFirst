@{
    // İleride Session / Auth bağlamak için hazır
    var userFullName = "Emirhan Hacıoğlu";
    var userRole = "Admin";

    var profileImage = Url.Content("~/Content/images/users/ben (1).jpg");
}

<header class="sticky top-0 z-40 bg-white dark:bg-background-dark/80 backdrop-blur-md border-b border-slate-200 dark:border-slate-800 px-8 py-3">
    <div class="flex items-center justify-between">

        <!-- LEFT -->
        <div class="flex items-center gap-6">
            <h2 class="text-slate-900 dark:text-white text-lg font-bold">
                Hoş Geldiniz, <span class="text-primary">@userFullName.Split(' ')[0]</span>
            </h2>

            <div class="relative w-72">
                <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-slate-400 !text-xl">
                    search
                </span>
                <input type="text"
                       class="w-full bg-slate-100 dark:bg-slate-800 border-none rounded-lg py-2 pl-10 pr-4 text-sm focus:ring-2 focus:ring-primary"
                       placeholder="Hastaları, doktorları ara..." />
            </div>
        </div>

        <!-- RIGHT -->
        <div class="flex items-center gap-4">
            <div class="flex items-center gap-3">

                <div class="text-right leading-tight">
                    <p class="text-sm font-bold text-slate-900 dark:text-white">
                        @userFullName
                    </p>
                    <p class="text-xs text-slate-400">
                        @userRole
                    </p>
                </div>

                <div class="size-10 rounded-full bg-cover bg-center border-2 border-primary/30 shadow-sm"
                     title="Profil"
                     style="background-image: url('@profileImage');">
                </div>

            </div>
        </div>

    </div>
</header>

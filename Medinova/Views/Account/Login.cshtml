@model Medinova.Dtos.LoginDto
@{
    Layout = null;
}

<!DOCTYPE html>

<html class="light" lang="tr">
<head>
   
            <meta charset="utf-8" />
            <meta content="width=device-width, initial-scale=1.0" name="viewport" />
            <title>Medinova - Giriş Yap</title>
            <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
            <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&amp;display=swap" rel="stylesheet" />
            <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&amp;display=swap" rel="stylesheet" />
            <script id="tailwind-config">
                tailwind.config = {
                    darkMode: "class",
                    theme: {
                        extend: {
                            colors: {
                                "primary": "#1e5aa9",
                                "background-light": "#f6f7f8",
                                "background-dark": "#121820",
                                "soft-blue": "#E9F3FF",
                            },
                            fontFamily: {
                                "display": ["Inter", "sans-serif"]
                            },
                            borderRadius: {
                                "DEFAULT": "0.5rem",
                                "lg": "0.75rem",
                                "xl": "1.5rem",
                                "full": "9999px"
                            },
                        },
                    },
                }
            </script>
            <style>
        body {
            font-family: 'Inter', sans-serif;
        }

        .bg-soft-gradient {
            background: linear-gradient(135deg, #E9F3FF 0%, #FFFFFF 100%);
        }

        .dark .bg-soft-gradient {
            background: linear-gradient(135deg, #121820 0%, #1a2332 100%);
        }

           
        .material-symbols-outlined {
            font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
        }
            </style>
            </head>
            <body class="bg-soft-gradient min-h-screen flex flex-col font-display transition-colors duration-300">
                <div class="layout-container flex h-full grow flex-col">
                    <header class="flex items-center justify-between whitespace-nowrap border-b border-solid border-gray-200/50 dark:border-gray-700/50 px-6 md:px-20 py-4 bg-white/30 backdrop-blur-md dark:bg-background-dark/30">
                        <div class="flex items-center gap-3 text-primary dark:text-white">
                            <div class="size-8">
                                <svg fill="none" viewBox="0 0 48 48" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M42.4379 44C42.4379 44 36.0744 33.9038 41.1692 24C46.8624 12.9336 42.2078 4 42.2078 4L7.01134 4C7.01134 4 11.6577 12.932 5.96912 23.9969C0.876273 33.9029 7.27094 44 7.27094 44L42.4379 44Z" fill="currentColor"></path>
                                </svg>
                            </div>
                            <h2 class="text-xl font-bold leading-tight tracking-tight">Medinova</h2>
                        </div>
                        <div class="flex items-center gap-6">
                            <nav class="hidden md:flex items-center gap-8">
                                <a class="text-gray-600 dark:text-gray-300 text-sm font-medium hover:text-primary transition-colors" href="#">Hakkımızda</a>
                                <a class="text-gray-600 dark:text-gray-300 text-sm font-medium hover:text-primary transition-colors" href="#">Hizmetler</a>
                                <a class="text-gray-600 dark:text-gray-300 text-sm font-medium hover:text-primary transition-colors" href="#">İletişim</a>
                            </nav>
                            <button class="p-2 rounded-full hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors" onclick="document.documentElement.classList.toggle('dark')" type="button">
                                <span class="material-symbols-outlined text-gray-600 dark:text-gray-300">dark_mode</span>
                            </button>
                        </div>
                    </header>
                    <main class="flex-1 flex items-center justify-center p-6">
                        <div class="w-full max-w-[460px] bg-white dark:bg-gray-900 rounded-lg shadow-xl shadow-blue-100/50 dark:shadow-none p-8 md:p-12 border border-gray-100 dark:border-gray-800">
                            <div class="flex flex-col items-center mb-10">
                                <div class="size-12 text-primary mb-4">
                                    <svg fill="none" viewBox="0 0 48 48" xmlns="http://www.w3.org/2000/svg">
                                        <path d="M42.4379 44C42.4379 44 36.0744 33.9038 41.1692 24C46.8624 12.9336 42.2078 4 42.2078 4L7.01134 4C7.01134 4 11.6577 12.932 5.96912 23.9969C0.876273 33.9029 7.27094 44 7.27094 44L42.4379 44Z" fill="currentColor"></path>
                                    </svg>
                                </div>
                                <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-2">Medinova</h1>
                                <p class="text-gray-500 dark:text-gray-400 text-sm font-medium tracking-wide">Geleceğin Sağlık Çözümleri</p>
                            </div>
                            <form class="space-y-6" method="post">
                                @Html.AntiForgeryToken()
                                @Html.Hidden("returnUrl", ViewBag.ReturnUrl as string)
                                <div class="flex flex-col gap-2">
                                    <label class="text-sm font-semibold text-gray-700 dark:text-gray-300">
                                        Kullanıcı Adı
                                    </label>
                                    <div class="relative flex items-center">
                                        <span class="absolute left-4 text-gray-400 material-symbols-outlined">
                                            person
                                        </span>
                                        @Html.TextBoxFor(x => x.UserName, new
                                        {
                                            @class = "w-full h-14 pl-12 pr-4 rounded-lg border border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800 text-gray-900 dark:text-white focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all outline-none",
                                            placeholder = "kullaniciadi",
                                            type = "text",
                                            autocomplete = "username"
                                        })
                                    </div>
                                </div>

                                <div class="flex flex-col gap-2">
                                    <div class="flex justify-between items-center">
                                        <label class="text-sm font-semibold text-gray-700 dark:text-gray-300">Şifre</label>
                                        <a class="text-xs font-bold text-primary hover:underline" href="#">Şifremi Unuttum?</a>
                                    </div>
                                    <div class="relative flex items-center">
                                        <span class="absolute left-4 text-gray-400 material-symbols-outlined">lock</span>
                                        @Html.PasswordFor(x => x.Password, new { @class = "w-full h-14 pl-12 pr-12 rounded-lg border border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800 text-gray-900 dark:text-white focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all outline-none", placeholder = "••••••••" })
                                        <button class="absolute right-4 text-gray-400 hover:text-gray-600 transition-colors" type="button">
                                            <span class="material-symbols-outlined">visibility</span>
                                        </button>
                                    </div>
                                </div>
                                @Html.ValidationSummary(false, "", new { @class = "text-sm text-red-500" })
                                <div class="space-y-4 pt-2">
                                    <button class="w-full h-14 bg-primary hover:bg-primary/90 text-white font-bold rounded-lg transition-all shadow-lg shadow-primary/20" type="submit">
                                        Giriş Yap
                                    </button>
                                    <div class="relative flex items-center py-2">
                                        <div class="flex-grow border-t border-gray-200 dark:border-gray-700"></div>
                                        <span class="flex-shrink mx-4 text-gray-400 text-xs font-medium uppercase tracking-widest">veya</span>
                                        <div class="flex-grow border-t border-gray-200 dark:border-gray-700"></div>
                                    </div>
                                    <button class="w-full h-14 flex items-center justify-center gap-3 border border-gray-200 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-800 text-gray-700 dark:text-white font-semibold rounded-lg transition-all" type="button">
                                        <svg class="w-5 h-5" viewBox="0 0 24 24">
                                            <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"></path>
                                            <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"></path>
                                            <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l3.66-2.84z" fill="#FBBC05"></path>
                                            <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"></path>
                                        </svg>
                                        Google ile Giriş
                                    </button>
                                </div>
                            </form>
                            <div class="mt-10 text-center">
                                <p class="text-sm text-gray-500 dark:text-gray-400">
                                    Hesabın yok mu?
                                    <a class="text-primary font-bold hover:underline ml-1" href="@Url.Action("Register", "Account")">Kayıt Ol</a>
                                </p>
                            </div>
                        </div>
                    </main>
                    <footer class="p-6 text-center">
                        <p class="text-xs text-gray-400">© 2024 Medinova Healthcare Platform. Tüm hakları saklıdır.</p>
                    </footer>
                </div>
            </body>
</html>
